<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
      android:id="@+id/lyActionsOnDeliver"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingTop="5dp"
      android:paddingStart="20dp"
      android:paddingEnd="20dp">

    <LinearLayout
        android:id="@+id/lyUseCash"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_gravity="start">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:background="@drawable/button_gray"
          android:padding="10dp"
          android:gravity="center_horizontal"
          android:id="@+id/lyInsideUseCash">
        <TextView
            android:id="@+id/tvUseCash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="@string/str_cash"
            android:textStyle="bold"/>
      </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyUseDataPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_gravity="end">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:background="@drawable/button_gray"
          android:padding="10dp"
          android:gravity="center_horizontal"
          android:id="@+id/lyInsideUseDataPhone">
        <TextView
            android:id="@+id/tvUseDataPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="@string/str_data_phone"
            android:textStyle="bold"/>
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
</LinearLayout>