<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item>  
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="oval">
      <padding android:top="0dp"
              android:right="0.5dp"
              android:bottom="0.5dp"
              android:left="0.5dp" />
      <solid
          android:color="@color/colorTransparent"/>

      <size
          android:width="32dp"
          android:height="32dp"/>
    </shape>
  </item>
  <item>
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="oval">
      <padding android:top="0dp"
              android:right="1dp"
              android:bottom="1dp"
              android:left="0.5dp" />
      <solid
          android:color="@color/shadow2"/>

      <size
          android:width="32dp"
          android:height="32dp"/>
    </shape>
  </item>
  <item>
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="oval">
      <padding android:top="0dp"
              android:right="1.5dp"
              android:bottom="1.5dp"
              android:left="0.5dp" />
      <solid
          android:color="@color/shadow1"/>

      <size
          android:width="32dp"
          android:height="32dp"/>
    </shape>
  </item>
  <item>
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="oval">
      <solid
          android:color="@color/white"/>

      <size
          android:width="32dp"
          android:height="32dp"/>
    </shape>
  </item>
</layer-list>
  