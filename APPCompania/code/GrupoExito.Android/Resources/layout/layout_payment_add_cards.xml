<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lyFootPaymentCards"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">
      
        <LinearLayout
          android:id="@+id/lyCardQuotes"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:paddingBottom="5dp"
          android:layout_marginStart="5dp"
          android:gravity="center_vertical">

          <TextView
            android:id="@+id/tvQuotesNumber"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="@string/str_quotes_number"
            android:layout_gravity="start|center_vertical"/>

          <Spinner
            android:id="@+id/spCreditCardQuotes"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_button"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="2dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/lyAddCreditCard">

            <TextView
              android:id="@+id/tvExitoCard"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="5dp"
              android:text="@string/str_add_exito_cards_payment"
              android:textColor="@color/colorLink"
              android:textSize="13sp"
              android:textStyle="bold"
              android:visibility="gone"/>

          <TextView
              android:id="@+id/tvOtherCards"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/str_add_other_cards_payment"
              android:textColor="@color/colorLink"
              android:textSize="13sp"
              android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>