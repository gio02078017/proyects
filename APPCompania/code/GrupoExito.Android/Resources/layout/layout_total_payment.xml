<?xml version="1.0" encoding="utf-8" ?>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/lytotal"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/button_gray">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:paddingTop="20dp"
        android:id="@+id/lyTotalHeader"
        android:paddingBottom="20dp"
        android:paddingStart="20dp"
        android:gravity="center">
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_weight="7"
          android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tvTotalSummary"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/str_total"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tvTotalPriceSummary"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingStart="5dp"
            android:textColor="@color/black" />
      </LinearLayout>
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="3"
          android:gravity="center_vertical|center_horizontal"
          android:paddingEnd="5dp"
          android:minWidth="25px"
          android:minHeight="25px"
          android:id="@+id/lyArrowSummary">
        <ImageView
            android:src="@drawable/flecha_arriba_terciaria"
            android:layout_width="18.5dp"
            android:layout_height="16.0dp"
            android:id="@+id/ivArrowSummary" />
      </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDividerDark"
        android:id="@+id/viewDivider" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:id="@+id/lyDetailSummary">
      <TableLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:stretchColumns="*"
          android:shrinkColumns="*"
          android:paddingStart="10dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/tableRow1"
            android:paddingBottom="10dp">
            <LinearLayout
						  android:layout_width="match_parent"
              android:layout_height="wrap_content"
						  android:orientation="horizontal"
						  android:layout_span="2">
              <TextView
                  android:id="@+id/tvSubTotalSummary"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="6"
                  android:text="@string/str_subtotal"
                  android:textAppearance="?android:attr/textAppearanceMedium"
                  android:textSize="13sp"
                  android:textStyle="bold"
                  android:textColor="@color/black" />
              <TextView
                  android:id="@+id/tvSubTotalPriceSummary"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="4"
                  android:gravity="end"
                  android:textAppearance="?android:attr/textAppearanceMedium"
                  android:textSize="13sp"
                  android:textStyle="bold"
                  android:textColor="@color/black" />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/tableRow2"
            android:paddingBottom="10dp"
            android:visibility="gone">
          <TextView
              android:id="@+id/tvCostSendTitleSummary"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="8"
              android:text="@string/str_cost_send"
              android:textSize="13sp"
              android:textColor="@color/black" />
          <TextView
              android:id="@+id/tvCostSendPriceSummary"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="2"
              android:textSize="13sp"
              android:gravity="end"
              />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tableRow3"
            android:paddingBottom="10dp">
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="8"
              android:orientation="horizontal"
              android:gravity="center_vertical">
            <TextView
                android:id="@+id/tvCostBagTitleSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_cost_bag"
                android:textSize="13sp"
                android:textColor="@color/black" />
            <ImageView
                android:src="@drawable/informacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivBoxTaxes"
                android:gravity="end" />
          </LinearLayout>
          <TextView
              android:id="@+id/tvCostBagPriceSummary"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="2"
              android:textSize="13sp"
              android:gravity="end"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tableRow8"
            android:paddingBottom="5dp">
          <TextView
              android:id="@+id/tvDiscountsAppliedTitleSummary"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="8"
              android:text="@string/str_discounts_applied"
              android:textSize="13sp"
              android:textColor="@color/black" />
          <TextView
              android:id="@+id/tvDiscountsAppliedPriceSummary"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="2"
              android:textSize="13sp"
              android:gravity="end"
              android:layout_gravity="center_vertical"/>
        </TableRow>
        <TableRow
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/rowMessageDiscountsApplied"
           android:paddingBottom="8dp"
					 android:visibility="visible">
           <TextView
              android:id="@+id/tvMessageDiscountsAppliedSummary"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
							android:layout_weight="8"
              android:text="@string/str_message_discounts_applied"
              android:textSize="10sp"
							android:layout_span="2" />
        </TableRow>
      </TableLayout>
    </LinearLayout>
  </LinearLayout>