<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/lyAddressMessage"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:paddingLeft="10dp"
   android:paddingRight="10dp"
   android:paddingTop="15dp"
   android:paddingBottom="15dp"
   android:orientation="horizontal"
   android:gravity="center_vertical"
   android:background="@drawable/button_black_transparent_with_border">
  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1.5">
  <ImageView
      android:layout_width="15dp"
      android:layout_height="15dp"
      android:src="@drawable/cheque_quinto"
      android:layout_gravity="center_horizontal"/>
   </LinearLayout>
  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingStart="15dp"
      android:layout_weight="7">
    <TextView
        android:id="@+id/tvSendTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_we_send_to"
        android:textColor="@color/black"
        android:textSize="13sp" />
    <TextView
        android:id="@+id/tvSendToAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="13sp" />
  </LinearLayout>
  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1.5">
  <ImageView
    android:layout_width="15dp"
    android:layout_height="15dp"
    android:src="@drawable/flecha_s"
    android:layout_gravity="center_horizontal"
    android:id="@+id/ivArrowRight"/>
   </LinearLayout>
</LinearLayout>