<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="30dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"          
    android:background="@drawable/dialog_login">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <ImageView
          android:id="@+id/ivSuccess"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="25dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:srcCompat="@drawable/verificado"
          tools:ignore="MissingConstraints" />
      <TextView
          android:id="@+id/tvSuccess"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="@string/str_good_job"
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:textSize="18sp"
          android:textStyle="bold"
          android:gravity="center_horizontal"
          android:textColor="@color/black"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/ivSuccess" />
      <TextView
          android:id="@+id/tvSuccessMessage"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textSize="16sp"
          android:textColor="@color/colorDescription"
          android:textStyle="bold"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/tvSuccess"
          android:gravity="center_horizontal" />
      <Button
          android:id="@+id/btnAccept"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:background="@drawable/button_yellow"
          android:textColor="@color/black"
          android:gravity="center_vertical|center_horizontal"
          android:paddingBottom="10dp"
          android:paddingLeft="20dp"
          android:paddingRight="20dp"
          android:textAllCaps="true"
          android:paddingTop="10dp"
          android:text="@string/str_accept"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/tvSuccessMessage"
          app:layout_constraintVertical_bias="0.087" />
      <ImageView
          android:id="@+id/imgCloseTwo"
          android:layout_width="20dp"
          android:layout_height="20dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="1.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:srcCompat="@drawable/cerrar" />
    </android.support.constraint.ConstraintLayout>
  </LinearLayout>