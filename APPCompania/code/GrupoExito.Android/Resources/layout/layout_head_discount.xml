<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingStart="15dp"
      android:paddingEnd="15dp"
      android:paddingTop="15dp"
      android:id="@+id/lyHeadMyDiscount">

    <TextView
        android:id="@+id/tvHowDoItUses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="end"
        android:textSize="13sp"
        android:textColor="@color/colorDiscounts"
        android:text="@string/str_how_do_it_uses"/>

    <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         
          <ImageView
            android:id="@+id/ivMyDiscounts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/mi_descuento_evento" />
             
          <TextView
            android:id="@+id/tvRangeDateDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>          
       </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:id="@+id/lySuccessfulDiscount"
        android:visibility="gone">
      
      <TextView
          android:id="@+id/tvExclusiveCoupons"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="@string/str_exclusive_coupons_for_you"
          android:textSize="12sp"
          android:textColor="@color/black"
          android:textStyle="bold" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:paddingTop="10dp"
          android:id="@+id/LyPreViewDiscount"
          android:visibility="gone">

        <TextView
            android:id="@+id/tvMessagePreView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/str_message_pre_view_discount"
            android:textColor="@color/colorDiscounts"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvRangeDateDiscountPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorDiscounts"
            android:textSize="19sp"
            android:textStyle="bold"/>
      </LinearLayout>
      
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:paddingTop="10dp"
          android:layout_gravity="center_horizontal"
          android:id="@+id/lyViewDiscount"
          android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:id="@+id/lyActivate"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:gravity="center"
              android:orientation="horizontal"
              android:id="@+id/lyInsideActivate">

            <TextView
                android:id="@+id/tvNumberActivate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorDiscounts"/>
          
          </LinearLayout>

          <TextView
              android:id="@+id/tvForActive"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:gravity="center_horizontal"
              android:text="@string/str_for_activate"
              android:textColor="@color/colorDiscounts"
              android:textSize="12sp"
              android:textStyle="bold"/>
        </LinearLayout>  

        <View 
            android:layout_width="1.5dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:id="@+id/viewActivate"
            android:background="@color/colorDiscounts"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:id="@+id/lyActivated"
            android:layout_marginEnd="10dp">

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:gravity="center"
              android:orientation="horizontal"
              android:id="@+id/lyInsideActivated">

            <TextView
                android:id="@+id/tvNumberActivated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorDiscounts"/>

          </LinearLayout>

          <TextView
              android:id="@+id/tvActived"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:text="@string/str_activated"
              android:textColor="@color/colorDiscounts"
              android:textSize="12sp"
              android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvMaximumQuantityDiscounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="7sp"
                android:text=""
                android:textColor="@color/colorDiscounts"/>

        </LinearLayout>
        
        <View 
            android:layout_width="1.5dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:id="@+id/viewActivated"
            android:background="@color/colorDiscounts"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:id="@+id/lyRedeemed"
            android:layout_marginEnd="10dp"
            android:visibility="gone">

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:gravity="center"
              android:orientation="horizontal"
              android:id="@+id/lyInsideRedeemed">

            <TextView
                android:id="@+id/tvNumberRedeemed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorDiscounts"/>

          </LinearLayout>
          
          <TextView
              android:id="@+id/tvRedeemed"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:text="@string/str_Redeemed"
              android:textColor="@color/colorDiscounts"
              android:textSize="12sp"
              android:textStyle="bold"/>
        </LinearLayout>
      </LinearLayout>    


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="20dp"
        android:id="@+id/lyErrorDiscount"
        android:visibility="gone">

      <ImageView
          android:id="@+id/ivErrorDiscount"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/mantenimiento_descuentos"
          android:visibility="visible"
          android:layout_gravity="center"/>

      <TextView
          android:id="@+id/tvMessageError"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:layout_marginTop="15dp"
          android:layout_gravity="center"
          android:gravity="center"/>

    </LinearLayout>
  </LinearLayout>
</LinearLayout>