<?xml version="1.0" encoding="utf-8" ?>
<android.support.v4.widget.NestedScrollView
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_height="wrap_content"
   android:layout_width="match_parent">
  <LinearLayout
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:paddingStart="5dp"
      android:paddingEnd="5dp"
      android:paddingBottom="10dp"
      android:orientation="vertical"
      android:paddingTop="20dp">
    <LinearLayout
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:orientation="vertical">
      <TextView
        android:id="@+id/tvOrderName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="@string/str_order_name"
        android:background="@drawable/gradient_filter"/>
      <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/black" />
      <Switch
        style="@style/SwitchCompatStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/swNameAscending"
        android:textColor="@color/colorDescription"
        android:text="@string/str_order_name_ascending"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>
      <Switch
        style="@style/SwitchCompatStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/swNameDescendant"
        android:textColor="@color/colorDescription"
        android:text="@string/str_order_name_descendant"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>
    </LinearLayout>
    <LinearLayout
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:orientation="vertical">
      <TextView
        android:id="@+id/tvOrderPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="@string/str_order_price"
        android:background="@drawable/gradient_filter"/>
      <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/black" />
      <Switch
        style="@style/SwitchCompatStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorDescription"
        android:id="@+id/swPriceAscending"
        android:text="@string/str_order_price_ascending"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>
      <Switch
        style="@style/SwitchCompatStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/swPriceDescendant"
        android:text="@string/str_order_price_descendant"
        android:textColor="@color/colorDescription"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>
    </LinearLayout>
    <LinearLayout
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:orientation="vertical">
      <TextView
        android:id="@+id/tvRelevance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="@string/str_relevance"
        android:background="@drawable/gradient_filter"/>
      <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/black" />
      <Switch
        style="@style/SwitchCompatStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorDescription"
        android:id="@+id/swRelevance"
        android:text="@string/str_relevance"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>
    </LinearLayout>
  </LinearLayout>
</android.support.v4.widget.NestedScrollView>