<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/lyAddressMessage"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:paddingLeft="10dp"
   android:paddingRight="10dp"
   android:paddingTop="15dp"
   android:paddingBottom="15dp"
   android:orientation="horizontal"
   android:gravity="center_vertical"
   android:background="@drawable/button_black_transparent_with_border">
  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1.5">
  <ImageView
      android:layout_width="15dp"
      android:layout_height="15dp"
      android:src="@drawable/cheque_quinto"
      android:layout_gravity="center_horizontal"/>
   </LinearLayout>
  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingStart="15dp"
      android:layout_weight="7">

    <app.exito.dev.utilities.shimmer
      android:id="@+id/shimmerToast"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
          android:id="@+id/tvSendToShimmer"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/str_we_send_to"
          android:textColor="@color/black"
          android:textSize="13sp" />

        <TextView
          android:id="@+id/tvSendToAddressShimmer"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/black"
          android:textSize="13sp" />

      </LinearLayout>

    </app.exito.dev.utilities.shimmer>

    <TextView
      android:id="@+id/tvSendTo"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/str_we_send_to"
      android:textColor="@color/black"
      android:textSize="13sp"
      android:visibility="gone"/>

    <TextView
      android:id="@+id/tvSendToAddress"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="@color/black"
      android:textSize="13sp"
      android:visibility="gone"/>

  </LinearLayout>
  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1.5">
  <ImageView
    android:layout_width="15dp"
    android:layout_height="15dp"
    android:src="@drawable/flecha_s"
    android:layout_gravity="center_horizontal"
    android:id="@+id/ivArrowRight"/>
   </LinearLayout>
</LinearLayout>