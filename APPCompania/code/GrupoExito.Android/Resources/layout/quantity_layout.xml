<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/lyQuantity"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/button_secondary"
  android:layout_marginStart="6dp"
  android:layout_marginEnd="6dp"
  android:orientation="vertical"
  android:visibility="gone">
  <LinearLayout
      android:id="@+id/lyProductLabels"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_horizontal"
      android:paddingTop="10dp"
      android:paddingStart="5dp"
      android:paddingEnd="5dp">
    <LinearLayout
       android:id="@+id/lyUnit"
       android:layout_width="0dp"
       android:layout_weight="5"
       android:layout_height="wrap_content"
       android:paddingEnd="5dp"
       android:gravity="center">
      <TextView
        android:id="@+id/tvUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="12sp"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/colorLink"
        android:background="@drawable/text_selected"
        android:text="@string/str_unit"/>
    </LinearLayout>
    <LinearLayout
      android:id="@+id/lyWeight"
      android:layout_width="0dp"
      android:layout_weight="5"
      android:gravity="center"
      android:layout_height="wrap_content"
      android:paddingEnd="5dp">
      <TextView
       android:id="@+id/tvWeight"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:gravity="end"
       android:textSize="12sp"
       android:paddingBottom="5dp"
       android:textAllCaps="true"
       android:textColor="@color/colorDescription"
       android:text="@string/str_weight"/>
    </LinearLayout>
  </LinearLayout>

  <View
    android:id="@+id/viewProductDivider"
    android:layout_width="match_parent"
    android:layout_height="0.1dp"
    android:background="@color/colorDescription"
    android:visibility="gone"/>
  
  <RelativeLayout
     android:id="@+id/rlQuantity"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:padding="5dp">
    <ImageView
        android:id="@+id/ivSubstract"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/menos"/>
    <ImageView
        android:id="@+id/ivRemoveProduct"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/eliminar"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
      <TextView
          android:id="@+id/tvProductQuantity"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="0"
          android:textColor="@color/colorPrimaryDark"
          android:gravity="center_horizontal" />
      <TextView
          android:id="@+id/tvProductQuantityWeight"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="2dp"
          android:visibility="gone"
          android:textColor="@color/colorPrimaryDark"
          android:gravity="center_horizontal" />
    </LinearLayout>
    <ImageView
        android:id="@+id/ivAdd"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/mas_color"
        android:layout_alignParentEnd="true" />
  </RelativeLayout>
</LinearLayout>