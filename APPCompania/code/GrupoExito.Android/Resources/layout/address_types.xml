<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp">
  <LinearLayout
      android:id="@+id/lyHome"
      android:layout_width="0dp"
      android:layout_weight="2"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingTop="20dp"
      android:paddingBottom="3dp"
      android:paddingStart="12dp"
      android:paddingEnd="12dp"
      android:background="@drawable/button_yellow">
    <TextView
        android:id="@+id/tvHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_home"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:drawablePadding="9dp"
        android:drawableTop="@drawable/casa_primario" />
  </LinearLayout>
  <LinearLayout
      android:id="@+id/lyOffice"
      android:layout_width="0dp"
      android:layout_weight="2"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingTop="20dp"
      android:paddingBottom="3dp"
      android:paddingStart="12dp"
      android:paddingEnd="12dp">
    <TextView
        android:id="@+id/tvOffice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_office"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold"
        android:drawablePadding="9dp"
        android:gravity="center_horizontal"
        android:textAllCaps="true"
        android:drawableTop="@drawable/oficina" />
  </LinearLayout>
  <LinearLayout
      android:id="@+id/lyCouple"
      android:layout_width="0dp"
      android:layout_weight="2"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingTop="20dp"
      android:paddingBottom="3dp"
      android:paddingStart="12dp"
      android:paddingEnd="12dp">
    <TextView
        android:id="@+id/tvCouple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_couple"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold"
        android:drawablePadding="9dp"
        android:gravity="center_horizontal"
        android:textAllCaps="true"
        android:drawableTop="@drawable/pareja" />
  </LinearLayout>
  <LinearLayout
      android:id="@+id/lyOther"
      android:layout_width="0dp"
      android:layout_weight="2"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingTop="20dp"
      android:paddingBottom="3dp"
      android:paddingStart="12dp"
      android:paddingEnd="12dp">
    <TextView
        android:id="@+id/tvOther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_other"
        android:textColor="@color/black"
        android:textSize="9sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:drawablePadding="10dp"
        android:gravity="center_horizontal"
        android:drawableTop="@drawable/otro" />
  </LinearLayout>
</LinearLayout>