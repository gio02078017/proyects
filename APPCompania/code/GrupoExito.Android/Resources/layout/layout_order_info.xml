<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lytotal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_gray">
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:weightSum="10"
      android:paddingTop="20dp"
      android:id="@+id/lyOrderHeader"
      android:paddingBottom="20dp"
      android:paddingLeft="20dp"
      android:gravity="center">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:layout_gravity="center_vertical">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:id="@+id/tvNameOrder"
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:text="@string/str_name_order"
          android:textSize="18sp"
          android:textStyle="bold"
          android:textColor="@color/black" />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:id="@+id/tvIdOrder"
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:textSize="18sp"
          android:textStyle="bold"
          android:paddingStart="5dp"
          android:textColor="@color/black" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical|center_horizontal"
        android:paddingEnd="5dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/lyArrowOrder">
      <ImageView
          android:src="@drawable/flecha_arriba_primaria"
          android:layout_width="18.5dp"
          android:layout_height="16.0dp"
          android:id="@+id/ivArrowOrder" />
    </LinearLayout>
  </LinearLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/colorDividerDark"
      android:id="@+id/viewDivider" />
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="15dp"
      android:id="@+id/lyDetailOrder">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"
        android:paddingLeft="10dp">
      <TableRow
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          android:id="@+id/rowProducts"
          android:paddingBottom="10dp">
        <TextView
            android:id="@+id/tvNameProducts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_products_success_payment"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end">

          <TextView
              android:id="@+id/tvQuantityProducts"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingEnd="3dp"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textSize="15sp"/>

          <View
              android:id="@+id/viewLine"
              android:layout_width="1.5dp"
              android:layout_height="match_parent"
              android:background="@color/colorDivider"/>

          <TextView
              android:id="@+id/tvNameSee"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingStart="3dp"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textSize="13sp"
              android:textStyle="bold"
              android:textColor="@color/colorLink"/>
        </LinearLayout>

      </TableRow>
      <TableRow
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          android:id="@+id/rowTotal"
          android:paddingBottom="10dp">
        <TextView
            android:id="@+id/tvNameTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_total"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="end"/>
      </TableRow>

      <TableRow
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/rowMidPay"
          android:paddingBottom="5dp">
        <TextView
            android:id="@+id/tvNameMidPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_mid_pay"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tvMidPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="end"/>
      </TableRow>
    </TableLayout>
  </LinearLayout>
</LinearLayout>