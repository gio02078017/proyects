<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="AppTheme" parent="Theme.AppCompat.Light">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:colorControlActivated">@color/colorPrimary</item>
  </style>

  <style name="FullScreenAppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowBackground">@color/colorPrimary</item>
  </style>

  <style name="CustomTabText" parent="TextAppearance.Design.Tab">
    <item name="android:textSize">6sp</item>
  </style>

  <style name="SwitchCompatTheme" >
    <item name="colorControlActivated">@color/colorPrimary</item>
  </style>

  <style name="SwitchCompatStyle" >
    <item name="thumbTint">@drawable/switch_color</item>
    <item name="android:colorControlActivated">@color/colorPrimary</item>
    <item name="trackTint">@drawable/switch_color</item>
  </style>

  <style name="SpinnerTheme" parent="android:Widget.Spinner">
    <item name="android:background">@drawable/spinner</item>
  </style>

  <style name="Dialog" parent="@android:style/Theme.Dialog">
    <item name="windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="AppCompatDialog" parent="@style/Theme.AppCompat.Light.Dialog">
    <item name="windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="MyCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
    <item name="android:colorControlNormal">#6c777e</item>
    <item name="android:colorControlActivated">#FFEA00</item>
    <item name="android:colorControlHighlight">#000000</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
  </style>

  <style name="MyCheckBox2" parent="Theme.AppCompat.Light">
    <item name="colorControlNormal">#6c777e</item>
    <item name="colorControlActivated">#000000</item>
  </style>

  <style name="Theme.Splash" parent="android:Theme">
    <item name="android:windowBackground">@drawable/splash</item>
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="HintText" parent="TextAppearance.Design.Hint">
    <item name="android:textColor">@color/colorControlActivated</item>
    <item name="android:textSize">14sp</item>
    <item name="android:fontFamily">@font/raleway_extra_bold</item>
    <item name="fontFamily">@font/raleway_extra_bold</item>
    <item name="android:textStyle">bold</item>
  </style>
  
  <style name="ErrorText" parent="TextAppearance.AppCompat">
    <item name="android:textColor">@color/colorAccent</item>
    <item name="android:textSize">12sp</item>
    <item name="android:fontFamily">@font/raleway_medium</item>
    <item name="fontFamily">@font/raleway_medium</item>
    <item name="android:textStyle">normal</item>
  </style>
  
  <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
    <!-- reference our hint & error styles -->
    <item name="hintTextAppearance">@style/HintText</item>
    <item name="errorTextAppearance">@style/ErrorText</item>
    <item name="colorControlActivated">@color/colorLink</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:textColorHint">@color/colorGray</item>
    <item name="colorControlNormal">@color/white</item>    
    <item name="colorControlHighlight">@color/colorGreen</item>
</style>
  
  <declare-styleable name="FabToolbar">
    <attr name="showDuration" format="integer"/>
    <attr name="hideDuration" format="integer"/>
    <attr name="verticalMargin" format="dimension"/>
    <attr name="horizontalMargin" format="dimension"/>
    <attr name="fadeInPivotX" format="dimension"/>
    <attr name="fadeInPivotY" format="dimension"/>
    <attr name="fadeInFraction" format="float"/>
    <attr name="fabId" format="reference"/>
    <attr name="containerId" format="reference"/>
    <attr name="fabToolbarId" format="reference"/>
    <attr name="fabDrawableAnimationEnabled" format="boolean"/>
  </declare-styleable>

</resources>