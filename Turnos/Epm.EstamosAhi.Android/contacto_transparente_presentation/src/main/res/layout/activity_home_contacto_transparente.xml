<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/generalDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.activities.HomeContactoTransparenteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@mipmap/background_head_contact_transparent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:src="@mipmap/icon_contact_transparent" />

            <app.epm.com.utilities.controls.CustomTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_horizontal"
                android:text="@string/title_head"
                android:textAlignment="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/title_size_head_home" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center">

            <app.epm.com.utilities.controls.CustomTextViewNormal
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginBottom="@dimen/margin_home_Bottom"
                android:text="@string/text_home_activity"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_select_option_home_activity"
                android:textAppearance="?android:attr/textAppearanceSmall" />


            <ImageView
                android:id="@+id/home_report_ivInsident"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:src="@mipmap/icon_report_incident" />


            <app.epm.com.utilities.controls.CustomTextViewNormal
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_home"
                android:layout_gravity="center"
                android:text="@string/report_to_insident"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_activity_home"
                android:textAppearance="?android:attr/textAppearanceSmall" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="25dp"
                android:background="@color/gray_line_separator" />


            <ImageView
                android:id="@+id/home_consult_ivInsident"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:src="@mipmap/icon_search_incident" />

            <app.epm.com.utilities.controls.CustomTextViewNormal
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_home"
                android:layout_gravity="center|top"
                android:text="@string/search_to_insident"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_activity_home"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/template_fragment_menu"    />

</androidx.drawerlayout.widget.DrawerLayout>
