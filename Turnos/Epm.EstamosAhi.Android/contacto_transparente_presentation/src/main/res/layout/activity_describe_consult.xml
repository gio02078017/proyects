<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/generalDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.activities.ConsultRegisterIncidentActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/line_backgroud_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_consult_incident_internal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/image_type_service_size"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@mipmap/icon_transparent_contact" />

                <app.epm.com.utilities.controls.CustomTextViewBold
                    android:id="@+id/txt_consult_act"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_text_located_incident"
                    android:layout_marginStart="@dimen/margin_left_text_located_incident"
                    android:text="@string/title_consult_act"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ff00800d"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/title_size" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/line_backgroud_gray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <app.epm.com.utilities.controls.CustomTextViewNormal
                    android:id="@+id/customTextViewNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/icon_report_number"
                    android:drawableStart="@mipmap/icon_report_number"
                    android:layout_marginLeft="@dimen/margin_left_labels"
                    android:layout_marginStart="@dimen/margin_left_labels"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="@string/title_number_report"
                    android:textColor="@color/contacto_text_activity_description"
                    android:textSize="@dimen/text_size_labels"/>

                <app.epm.com.utilities.controls.CustomTextViewNormal
                    android:id="@+id/status_tvCodeIncident"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_labels"
                    android:layout_marginStart="@dimen/margin_left_labels"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="246942"
                    android:textColor="@color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            </LinearLayout>
        </LinearLayout>

        <app.epm.com.utilities.controls.SlidingTabLayout
            android:id="@+id/status_stl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/contacto_text_activity_description" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/status_vpFragments"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <include layout="@layout/template_fragment_menu" />

</androidx.drawerlayout.widget.DrawerLayout>