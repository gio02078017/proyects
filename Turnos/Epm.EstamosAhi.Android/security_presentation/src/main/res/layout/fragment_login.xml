<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo_login"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_weight=".9"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/login_llCorreoElectronico"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/margin_between_controls"
            android:layout_marginTop="@dimen/margin_top_login_register"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/size_images_login"
                android:layout_height="@dimen/size_images_login"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/margin_between_controls"
                android:layout_marginRight="@dimen/margin_between_controls"
                android:src="@mipmap/correo_electronico" />

            <app.epm.com.utilities.controls.CustomEditTextNormal
                android:id="@+id/login_etCorreoElectronico"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/text_correo_electronico"
                android:inputType="textEmailAddress"
                android:maxLength="100"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white"
                android:textColorHint="@color/whiteWithOpacity"
                android:textCursorDrawable="@drawable/cursor_color_white"
                android:textSize="@dimen/size_fields_registro_login" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="@dimen/margin_between_controls"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/margin_between_controls"
            android:layout_marginTop="@dimen/margin_top_login_register"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/size_images_login"
                android:layout_height="@dimen/size_images_login"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/margin_between_controls"
                android:layout_marginRight="@dimen/margin_between_controls"
                android:src="@mipmap/contrasena" />

            <app.epm.com.utilities.controls.CustomEditTextNormal
                android:id="@+id/login_etContrasenia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/text_contrasenia"
                android:inputType="textPassword"
                android:maxLength="50"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white"
                android:textColorHint="@color/whiteWithOpacity"
                android:textCursorDrawable="@drawable/cursor_color_white"
                android:textSize="@dimen/size_fields_registro_login" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="@dimen/margin_between_controls"
            android:background="@color/white" />

        <app.epm.com.utilities.controls.CustomButtonNormal
            android:id="@+id/login_btnOlvidasteContrasenia"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="@string/text_olvidaste_contrasenia"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/button_green_olvidaste_and_acepto_terminos"
            android:textSize="@dimen/size_fields_registro_login" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_weight=".6"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".9" />

        <app.epm.com.utilities.controls.CustomButtonBold
            android:id="@+id/login_btnIngresarAhora"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/button_green"
            android:text="@string/text_ingresar_ahora"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="@dimen/size_text_button" />

    </LinearLayout>

</LinearLayout>
