<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/generalDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="app.epm.com.security_presentation.view.activities.MyProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@mipmap/fondo_perfil"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/myProfile_imgUser"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="3dp"
                        android:src="@mipmap/icon_perfi_usuario" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/myProfile_imgUser"
                        android:orientation="vertical">

                        <app.epm.com.utilities.controls.CustomTextViewNormal
                            android:id="@+id/myProfile_tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre y Apellido"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/white" />

                        <app.epm.com.utilities.controls.CustomTextViewNormal
                            android:id="@+id/myProfile_tvAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/white"
                            android:visibility="gone" />

                        <app.epm.com.utilities.controls.CustomTextViewNormal
                            android:id="@+id/myProfile_tvCountry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/white"
                            android:visibility="gone" />

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/myProfile_llInfo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <ScrollView
                    android:id="@+id/myProfile_svInfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/myProfile_ivName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@mipmap/icon_nombre_prf_gris" />

                            <LinearLayout
                                android:id="@+id/myProfile_llName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:orientation="horizontal">

                                <app.epm.com.utilities.controls.CustomEditTextNormal
                                    android:id="@+id/myProfile_etName"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="3"
                                    android:background="@null"
                                    android:gravity="center_vertical"
                                    android:hint="@string/hint_name"
                                    android:inputType="textPersonName"
                                    android:maxLength="64"
                                    android:nextFocusDown="@+id/myProfile_etLastName"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/green_font_profile"
                                    android:textColorHint="@color/hint_color_profile" />

                                <ImageView
                                    android:id="@+id/myProfile_ivLastName"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:src="@mipmap/icon_apellido_prf_gris" />

                                <app.epm.com.utilities.controls.CustomEditTextNormal
                                    android:id="@+id/myProfile_etLastName"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="3"
                                    android:background="@null"
                                    android:gravity="center_vertical"
                                    android:hint="@string/hint_last_name"
                                    android:inputType="textPersonName"
                                    android:maxLength="64"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/green_font_profile"
                                    android:textColorHint="@color/hint_color_profile" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="0.1dp"
                                android:layout_weight="1"
                                android:background="@color/status_bar" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/myProfile_ivEmail"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@mipmap/icon_email_prf_verde" />

                            <app.epm.com.utilities.controls.CustomTextViewNormal
                                android:id="@+id/myProfile_tvEmail"
                                style="@style/EditTextMenu"
                                android:hint="@string/hint_email"
                                android:inputType="textEmailAddress" />

                        </LinearLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/status_bar" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/myProfile_ivDocumentType"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@mipmap/icon_tipo_documento_prf_gris" />

                            <app.epm.com.utilities.controls.CustomTextViewNormal
                                android:id="@+id/myProfile_tvDocumentType"
                                style="@style/EditTextMenu"
                                android:hint="@string/hint_type_document" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/status_bar" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/myProfile_ivDocumentNumber"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@mipmap/icon_num_doc_prf_gris" />

                            <app.epm.com.utilities.controls.CustomEditTextNormal
                                android:id="@+id/myProfile_etDocumentNumber"
                                style="@style/EditTextMenu"
                                android:hint="@string/hint_number_document"
                                android:inputType="textPersonName"
                                android:maxLength="16" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/status_bar" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/myProfile_ivPersonType"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@mipmap/icon_tipo_persona_prf_gris" />

                            <app.epm.com.utilities.controls.CustomTextViewNormal
                                android:id="@+id/myProfile_tvPersonType"
                                style="@style/EditTextMenu"
                                android:hint="@string/hint_type_person" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/status_bar" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/myProfile_ivTel"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@mipmap/icon_tel_prf_gris" />

                            <app.epm.com.utilities.controls.CustomEditTextNormal
                                android:id="@+id/myProfile_etTel"
                                style="@style/EditTextMenu"
                                android:hint="@string/hint_phone"
                                android:inputType="phone"
                                android:maxLength="64" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/status_bar" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/myProfile_ivCel"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@mipmap/icon_cel_prf_gris" />

                            <app.epm.com.utilities.controls.CustomEditTextNormal
                                android:id="@+id/myProfile_etCel"
                                style="@style/EditTextMenu"
                                android:hint="@string/hint_cell_phone"
                                android:inputType="phone"
                                android:maxLength="15" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/status_bar" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/myProfile_ivAddress"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@mipmap/icon_direccion_prf_gris" />

                            <app.epm.com.utilities.controls.CustomEditTextNormal
                                android:id="@+id/myProfile_etAddress"
                                style="@style/EditTextMenu"
                                android:hint="@string/hint_address"
                                android:inputType="textLongMessage"
                                android:maxLength="100" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/status_bar" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/myProfile_ivHousingType"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@mipmap/icon_tip_vivienda_prf_gris" />

                            <app.epm.com.utilities.controls.CustomTextViewNormal
                                android:id="@+id/myProfile_tvHousingType"
                                style="@style/EditTextMenu"
                                android:hint="@string/hint_type_place" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/status_bar" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/myProfile_ivCountry"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@mipmap/icon_pais_prf_gris" />

                            <app.epm.com.utilities.controls.CustomEditTextNormal
                                android:id="@+id/myProfile_etCountry"
                                style="@style/EditTextMenu"
                                android:hint="@string/hint_country"
                                android:inputType="textLongMessage"
                                android:maxLength="128" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/status_bar" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/myProfile_ivDate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@mipmap/icon_cumple_prf_gris" />

                            <app.epm.com.utilities.controls.CustomTextViewNormal
                                android:id="@+id/myProfile_tvDate"
                                style="@style/EditTextMenu"
                                android:hint="@string/hint_birthday" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/status_bar" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/myProfile_ivFemaleMaleType"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@mipmap/icon_genero_prf_gris" />

                            <app.epm.com.utilities.controls.CustomTextViewNormal
                                android:id="@+id/myProfile_tvFemaleMaleType"
                                style="@style/EditTextMenu"
                                android:hint="@string/hint_gender" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/status_bar" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/myProfile_ivAlternateEmail"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@mipmap/icon_email_alterno_prf_gris" />

                            <app.epm.com.utilities.controls.CustomEditTextNormal
                                android:id="@+id/myProfile_etAlternateEmail"
                                style="@style/EditTextMenu"
                                android:hint="@string/hint_email_alternate"
                                android:inputType="textEmailAddress"
                                android:maxLength="100" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/status_bar" />

                    </LinearLayout>


                </ScrollView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:orientation="vertical">


                <app.epm.com.utilities.controls.CustomButtonBold
                    android:id="@+id/myProfile_btnSaveChanges"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/save_changes_profile"
                    android:text="@string/text_save_changes"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_text_button" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>