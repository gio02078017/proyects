<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/generalDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".32"
            android:background="@mipmap/background_encabezado_fraudes"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/size_icon_reporte_fraudes"
                    android:layout_height="@dimen/size_icon_reporte_fraudes"
                    android:layout_gravity="center"
                    android:background="@mipmap/icon_reporte_fraude" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".85">

                <app.epm.com.utilities.controls.CustomTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal|top"
                    android:lineSpacingMultiplier="0.8"
                    android:text="@string/servicios_fraudes_title_reporte"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_size_head_reporte_fraudes" />
            </FrameLayout>

        </LinearLayout>


        <app.epm.com.utilities.controls.CustomTextViewNormal
            android:id="@+id/reporte_fraudes_tvSelectServices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6dp"
            android:text="@string/servicios_fraudes_text_select_services"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.22"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/reporte_fraudes_ivEnergia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_energy_gray" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.22"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/reporte_fraudes_ivAgua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_water_gray" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.22"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/reporte_fraudes_ivGas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_gas_gray" />

        </LinearLayout>


    </LinearLayout>

    <include layout="@layout/template_fragment_menu"            />
</androidx.drawerlayout.widget.DrawerLayout>