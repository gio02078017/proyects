<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.epm.com.reporte_danios_presentation">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name=".view.activities.UbicacionDanioActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activities.ServiciosDanioActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activities.DescribeDanioActivity"
            android:screenOrientation="portrait" />

        <receiver android:name="app.epm.com.utilities.helpers.GpsLocationReceiver">
            <intent-filter>
                <action android:name="android.location.PROVIDERS_CHANGED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <activity android:name=".view.activities.AdjuntarFotoDanioActivity"
            android:configChanges="fontScale"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.activities.VerResumenDanioActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
    </application>

</manifest>