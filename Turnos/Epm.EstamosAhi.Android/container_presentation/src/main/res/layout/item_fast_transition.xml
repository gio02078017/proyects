<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="itemViewModel"
            type="com.epm.app.mvvm.transactions.viewModel.ItemFastTransitionViewModel" />

    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewFastTransaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_type_person_item_start"
            android:paddingEnd="@dimen/padding_type_person_item_end"
            android:paddingTop="@dimen/padding_type_person_item_top"
            android:paddingBottom="@dimen/padding_type_person_item_bottom">


            <ImageView
                android:id="@+id/imageNearbyOffices"
                android:layout_width="@dimen/size_image_itemFast_transaction"
                android:layout_height="@dimen/size_image_itemFast_transaction"
                android:layout_marginTop="@dimen/layout_marginTop_image_itemFast_transaction"
                android:layout_marginBottom="@dimen/layout_marginBottom_image_itemFast_transaction"
                android:background="@mipmap/icon_duplicado_factura"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <app.epm.com.utilities.controls.CustomTextViewBold
                android:id="@+id/txtNameItemFastTransaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_name_itemFast_transaction"
                android:layout_marginTop="@dimen/layout_marginTop_name_itemFast_transaction"
                android:text="Duplicado de factura"
                android:textColor="@color/green_font_start"
                android:textSize="@dimen/size_txt_name_itemFast_transaction"
                app:layout_constraintStart_toEndOf="@+id/imageNearbyOffices"
                app:layout_constraintTop_toTopOf="parent" />

            <app.epm.com.utilities.controls.CustomTextViewNormal
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_description_itemFast_transaction"
                android:layout_marginTop="@dimen/layout_marginTop_description_itemFast_transaction"
                android:text="Copia de tu factura habitual"
                android:textSize="@dimen/size_txt_description_itemFast_transaction"
                app:layout_constraintStart_toEndOf="@+id/imageNearbyOffices"
                app:layout_constraintTop_toBottomOf="@+id/txtNameItemFastTransaction"
                app:layout_constraintWidth_percent="0.6" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_arrow_right_turns"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />




        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_divide_line_turns"
            android:layout_gravity="bottom"/>

    </androidx.cardview.widget.CardView>



   <!--   app:mutableLoadImage="@{itemViewModel.image}"
   android:text="@{itemViewModel.transation.name}"
    android:text="@{itemViewModel.transation.description}"-->
</layout>