<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="configurationViewModel"
            type="com.epm.app.mvvm.comunidad.viewModel.ConfigurationNotificationViewModel" />
    </data>

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_configuration"
        android:clickable="true"
        android:focusable="true"
        tools:context=".mvvm.comunidad.views.fragments.ConfigurationFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/arrowBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="@dimen/marginarrowStart"
                android:layout_marginTop="20dp"
                android:src="@mipmap/right_arrow"
                android:rotation="180"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <app.epm.com.utilities.controls.CustomTextViewBold
                android:id="@+id/titleConfiguration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_configuration"
                android:text="@string/text_title_configuration"
                android:textColor="@color/white"
                android:textSize="@dimen/text_title_configuration"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/arrowBack" />

            <RelativeLayout
                android:id="@+id/alerts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleConfiguration">

                <app.epm.com.utilities.controls.CustomTextViewNormal
                    android:id="@+id/textAlerts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="20dp"
                    android:padding="5dp"
                    android:text="@string/Alertas_splash"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_description_configuration" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchAlerts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/switchCustomerService"
                    android:layout_alignBottom="@id/textAlerts"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/textAlerts"
                    android:theme="@style/switchConfigurationNotification" />

                <app.epm.com.utilities.controls.CustomTextViewNormal
                    android:id="@+id/textCustomerService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textAlerts"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp"
                    android:text="@string/customer_Service"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_description_configuration" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchCustomerService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textCustomerService"
                    android:layout_alignBottom="@id/textCustomerService"
                    android:layout_toEndOf="@+id/textCustomerService"
                    android:theme="@style/switchConfigurationNotification"
                    />


            </RelativeLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>

</layout>