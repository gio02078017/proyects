<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/listNewsEvents_rlConteiner"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/listNewsEvents_imgContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <ProgressBar
            android:id="@+id/listNewsEvents_pgLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="55dp"
                android:background="@drawable/gradient_black_background">

                <RelativeLayout
                    android:id="@+id/listNewsEvents_rlDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="10dp">

                    <app.epm.com.utilities.controls.CustomTextViewNormal
                        android:id="@+id/listNewsEvents_tvDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textSize="32sp"
                        android:textColor="@color/white" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/listNewsEvents_rlLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/listNewsEvents_rlDay">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="1dp"
                        android:background="@color/white" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/listNewsEvents_rlMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/listNewsEvents_rlLine"
                    android:paddingLeft="10dp">

                    <app.epm.com.utilities.controls.CustomTextViewNormal
                        android:id="@+id/listNewsEvents_tvMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Junio"
                        android:textSize="15sp"
                        android:textColor="@color/white" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/listNewsEvents_rlMonth"
                    android:paddingLeft="10dp">

                    <app.epm.com.utilities.controls.CustomTextViewNormal
                        android:id="@+id/listNewsEvents_tvYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2015"
                        android:textSize="20sp"
                        android:textColor="@color/white" />

                </RelativeLayout>

            </RelativeLayout>



            <LinearLayout
                android:id="@+id/listNewsEvents_llOpenDetail"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:background="#CCFFFFFF">

                <app.epm.com.utilities.controls.CustomTextViewNormal
                    android:id="@+id/listNewsEvents_tvDescriptionBottom"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=". . ."
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/listNewsEvents_imgArrow"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    android:padding="15dp"
                    android:src="@mipmap/flecha_ver_mas" />

            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>