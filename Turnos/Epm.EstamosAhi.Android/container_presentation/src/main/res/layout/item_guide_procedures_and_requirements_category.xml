<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="itemViewModelCategory"
            type="com.epm.app.mvvm.procedure.viewModel.GuideProceduresAndRequirementsViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/layoutGuideProceduresAndRequirements">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/padding_guide_procedures_and_requirements_item_top"
            android:paddingBottom="@dimen/padding_guide_procedures_and_requirements_item_bottom"
            android:paddingStart="@dimen/padding_guide_procedures_and_requirements_item_start"
            android:paddingEnd="@dimen/padding_guide_procedures_and_requirements_item_end">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageGuideProceduresAndRequirementsCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:mutableLoadImage="@{itemViewModelCategory.imageGuideProceduresAndRequirementsCategory}" />
            </LinearLayout>

            <app.epm.com.utilities.controls.CustomTextViewBold
                android:id="@+id/textNameGuideProceduresAndRequirementsCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="65"
                android:layout_marginStart="24dp"
                android:textColor="@color/colorTextGuideProceduresAndRequirements"
                android:textSize="@dimen/size_text_body"
                app:mutableText="@{itemViewModelCategory.textNameCategory}" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageArrow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:mutableLoadImage="@{itemViewModelCategory.iconState}" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_line_guide_procedures_and_requirements_item"
            android:background="@color/color_line_item_guide_procedures_and_requirements"/>

    </LinearLayout>

</layout>