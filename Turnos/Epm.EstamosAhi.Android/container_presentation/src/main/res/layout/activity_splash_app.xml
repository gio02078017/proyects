<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="37dp"
                android:src="@mipmap/logo_epm" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/splash">

            <app.epm.com.utilities.controls.CustomTextViewNormal
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/splashApp_tvVersion"
                android:gravity="center"
                android:text="@string/text_splash"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text_green_splash"
                android:textSize="@dimen/size_texts_splash" />

            <app.epm.com.utilities.controls.CustomTextViewBold
                android:id="@+id/splashApp_tvVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/splashApp_tvVersion_gone"
                android:gravity="center"
                android:text="@string/text_version_app"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text_green_splash"
                android:textSize="@dimen/size_texts_splash" />

            <app.epm.com.utilities.controls.CustomTextViewBold
                android:id="@+id/splashApp_tvVersion_gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/splashApp_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>