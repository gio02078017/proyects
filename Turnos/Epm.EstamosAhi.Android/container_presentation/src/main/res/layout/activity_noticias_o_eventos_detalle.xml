<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/generalDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.3"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <ImageView
                    android:id="@+id/newsEventsDetal_imgNewsEvents"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_black_background"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <RelativeLayout
                        android:id="@+id/newsEventsDetal_rlDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp">

                        <app.epm.com.utilities.controls.CustomTextViewNormal
                            android:id="@+id/newsEventsDetal_tvDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textSize="32dp"
                            android:textColor="@color/white" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/newsEventsDetal_rlLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/newsEventsDetal_rlDay">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="1dp"
                            android:background="@color/white" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/newsEventsDetal_rlMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/newsEventsDetal_rlLine"
                        android:paddingLeft="10dp">

                        <app.epm.com.utilities.controls.CustomTextViewNormal
                            android:id="@+id/newsEventsDetal_tvMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Junio"
                            android:textSize="15sp"
                            android:textColor="@color/white" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/newsEventsDetal_rlMonth"
                        android:paddingLeft="10dp">

                        <app.epm.com.utilities.controls.CustomTextViewNormal
                            android:id="@+id/newsEventsDetal_tvYear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2015"
                            android:textSize="20sp"
                            android:textColor="@color/white" />

                    </RelativeLayout>

                </RelativeLayout>

                <ProgressBar
                    android:id="@+id/newsEventsDetail_pbLoadImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp">

                <app.epm.com.utilities.controls.CustomTextViewNormal
                    android:id="@+id/newsEventsDetail_tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginBottom="10dp"
                    android:text="Prueba Concepto"
                    android:textColor="@color/green_title_detail_news_event"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".02"
                android:background="@color/button_material_light" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp">

                    <app.epm.com.utilities.controls.CustomTextViewNormal
                        android:id="@+id/newsEventsDetail_tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20dp"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                </LinearLayout>

            </ScrollView>


        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/template_fragment_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>