<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.epm.app.mvvm.procedure.viewModel.DetailsOfTheTransactionViewModel" />

    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/generalDrawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mvvm.procedure.views.activities.DetailsOfTheTransactionActivity">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/toolbarDetails"
                layout="@layout/toolbar"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/buttonTransaction"
                />

            <app.epm.com.utilities.controls.CustomTextViewBold
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_head_screen_title_height_turn"
                android:background="@color/background_head_turns"
                android:textSize="@dimen/size_title_3_head_turn"
                android:textAlignment="center"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbarDetails"
                app:mutableText="@{viewModel.textTittle}" />

            <app.epm.com.utilities.controls.CustomButtonBold
                android:id="@+id/buttonTransaction"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_buttom_height_turn"
                android:text="@={viewModel.textButton}"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="@dimen/size_text_buttom"
                android:onClick="@{() -> viewModel.pushButtonStartProcess()}"
                android:background="@color/color_button_detail_transaction_turn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />





        </androidx.constraintlayout.widget.ConstraintLayout>


        <include layout="@layout/template_fragment_menu"/>


    </androidx.drawerlayout.widget.DrawerLayout>



</layout>