<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".mvvm.turn.views.activities.NearbyOfficesActivity">


    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/generalDrawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white">

            <include
                android:id="@+id/toolbarNearbyOffices"
                layout="@layout/toolbar"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_head_screen_title_height_turn"
                android:id="@+id/lyHeadScreemNearbyOffices"
                app:layout_constraintTop_toBottomOf="@+id/toolbarNearbyOffices"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="vertical"
                android:gravity="center|center_horizontal"
                android:background="@color/background_head_turns">

                <app.epm.com.utilities.controls.CustomTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/size_title_3_head_turn"
                    android:textColor="@color/colorTextHeadGenerally"
                    android:text="@string/text_title_nearby_offices"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/nearbyOfficesRecyclerView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/margin_nearby_recyclerview_bottom"
                app:layout_constraintBottom_toTopOf="@+id/btnSeeOtherOffices"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lyHeadScreemNearbyOffices"/>

            <app.epm.com.utilities.controls.CustomButtonBold
                android:id="@+id/btnSeeOtherOffices"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_buttom_height_turn"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="visible"
                android:text="@string/text_see_other_offices"
                android:background="@color/pageIndicator"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_white"
                android:textSize="@dimen/size_text_buttom"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <include layout="@layout/template_fragment_menu" />

    </androidx.drawerlayout.widget.DrawerLayout>
</layout>