<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/generalDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.activities.ConsultFacturaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".25"
                android:background="@mipmap/fondo_encabezado_factura"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="@dimen/size_icon_factura"
                        android:layout_height="@dimen/size_icon_factura"
                        android:layout_gravity="center"
                        android:background="@mipmap/icon_factura_web" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".5">

                    <app.epm.com.utilities.controls.CustomTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal|top"
                        android:lineSpacingMultiplier="0.8"
                        android:text="@string/title_head_factura_web"
                        android:textColor="@color/white"
                        android:textSize="@dimen/title_size_head_consult_factura" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".50"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".25"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <app.epm.com.utilities.controls.CustomTextViewBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/message_elegir_opcion"
                        android:textSize="17sp"
                        android:textColor="@color/green_factura" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutConsulta"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".15"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <app.epm.com.utilities.controls.CustomTextViewNormal
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".3"
                        android:gravity="center_vertical"
                        android:text="@string/check_consultar_contrato"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <CheckBox
                        android:id="@+id/consultFactura_cbNumeroContrato"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".03"
                        android:checked="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".15"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <app.epm.com.utilities.controls.CustomTextViewNormal
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".3"
                        android:gravity="center_vertical"
                        android:text="@string/check_consultar_referencia"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <CheckBox
                        android:id="@+id/consultFactura_cbReferentePago"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".03" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_factura_consult"
                    android:paddingRight="@dimen/margin_factura_consult">

                    <app.epm.com.utilities.controls.CustomEditTextNormal
                        android:id="@+id/consultFactura_etNumeroFactura"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/text_digitar_numero"
                        android:inputType="number"
                        android:maxLength="8"
                        android:textColorHint="@color/gray_button_continue"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/green_factura"
                        android:textSize="@dimen/size_text_consult_factura" />
                </LinearLayout>

            </LinearLayout>

             <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:orientation="vertical">

                <app.epm.com.utilities.controls.CustomButtonBold
                    android:id="@+id/consultFactura_btnConsultarAhora"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/status_bar"
                    android:enabled="false"
                    android:text="@string/text_btn_consultar_ahora"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_text_button" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/template_fragment_menu"  />

</androidx.drawerlayout.widget.DrawerLayout>