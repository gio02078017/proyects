<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="50dp"
                android:gravity="center_horizontal"
                android:text="@string/add_user_title"
                android:textColor="@color/toolbar_title"
                android:textSize="17sp"
                android:textStyle="normal|bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:id="@+id/linear_layout_account"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                style="@style/TextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/title_add_user_family" />

            <TextView
                android:id="@+id/tvName"
                style="@style/SubTextForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/hint_names"
                android:textColor="@color/text_blue"
                app:layout_constraintStart_toStartOf="@+id/lyName"
                app:layout_constraintTop_toBottomOf="@+id/lyName" />

            <LinearLayout
                android:id="@+id/lyName"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/input_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8">


                <EditText
                    android:id="@+id/editName"
                    style="@style/SubTextForm"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/example_login"
                    android:inputType="textPersonName"
                    android:maxLength="30"
                    android:paddingBottom="3dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/tvNameError"
                style="@style/SubTextForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_error"
                android:textColor="@color/show_error"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/lyName"
                app:layout_constraintTop_toBottomOf="@+id/lyName" />

            <TextView
                android:id="@+id/tvLastName"
                style="@style/SubTextForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/hint_last_names"
                app:layout_constraintStart_toStartOf="@+id/lyName"
                app:layout_constraintTop_toBottomOf="@+id/lyName" />


            <LinearLayout
                android:id="@+id/lyLastName"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/input_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8">


                <EditText
                    android:id="@+id/editLastName"
                    style="@style/SubTextForm"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:hint="@string/example_last_name"
                    android:inputType="textPersonName"
                    android:maxLength="30"
                    android:paddingBottom="3dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvLastNameError"
                style="@style/SubTextForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_error"
                android:textColor="@color/show_error"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/lyName"
                app:layout_constraintTop_toBottomOf="@+id/lyName" />

            <TextView
                android:id="@+id/tvParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/relationship"
                android:textColor="@color/text_blue"
                app:layout_constraintStart_toStartOf="@+id/linearLayout3"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

            <LinearLayout
                android:id="@+id/lyParent"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_background">

                <EditText
                    android:id="@+id/editParent"
                    style="@style/SubTextForm"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:background="@android:color/transparent"
                    android:inputType="text"
                    android:maxLength="30"
                    android:paddingBottom="3dp" />
            </LinearLayout>

            <TextView
                style="@style/SubTextForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/type_document"
                app:layout_constraintStart_toStartOf="@+id/lyName"
                app:layout_constraintTop_toBottomOf="@+id/lyName" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_background">

                <Spinner
                    android:id="@+id/spinnerTypeDocument"
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvDocument"
                style="@style/SubTextForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/hint_document"
                app:layout_constraintStart_toStartOf="@+id/lyName"
                app:layout_constraintTop_toBottomOf="@+id/lyName" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/input_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8">


                <EditText
                    android:id="@+id/editNumberDocument"
                    style="@style/SubTextForm"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/example_document"
                    android:maxLength="30"
                    android:paddingBottom="3dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/tvDocumentError"
                style="@style/SubTextForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_error"
                android:textColor="@color/show_error"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/lyName"
                app:layout_constraintTop_toBottomOf="@+id/lyName" />

            <TextView
                android:id="@+id/tvPhone"
                style="@style/SubTextForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/phone_text"
                app:layout_constraintStart_toStartOf="@+id/lyName"
                app:layout_constraintTop_toBottomOf="@+id/lyName" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearLayout37"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/input_background"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8">

                    <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                        android:id="@+id/ccp"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:paddingBottom="2dp"
                        android:visibility="gone"
                        app:ccp_defaultCode="57"
                        app:ccp_defaultNameCode="CO"
                        app:ccp_hideNameCode="true"
                        app:ccp_showFlag="false"
                        app:ccp_textColor="@color/text_blue"
                        app:ccp_textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:paddingBottom="2dp"
                        android:text="@string/country_code_colombia"
                        android:textColor="@color/text_blue"
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyPhone"
                    android:layout_width="0dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_background"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8">


                    <EditText
                        android:id="@+id/editPhone"
                        style="@style/SubTextForm"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginEnd="4dp"
                        android:background="@android:color/transparent"
                        android:hint="@string/example_phone"
                        android:inputType="number"
                        android:paddingBottom="2dp" />


                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvPhoneError"
                style="@style/SubTextForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_error_phone"
                android:textColor="@color/show_error"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/lyName"
                app:layout_constraintTop_toBottomOf="@+id/lyName" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*Solo padres o representantes legales podrán registrar a menores de edad." />

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioTerm"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:width="1dp"
                    android:buttonTint="@color/blue_black_btn"
                    tools:targetApi="lollipop" />

                <TextView
                    android:id="@+id/radioText"
                    style="@style/SubTextTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/message_terms" />

            </LinearLayout>

            <Button
                android:id="@+id/btnAdd"
                style="@style/TextTitleBtnHome"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_open_selector"
                android:enabled="false"
                android:text="@string/add_user_btn"
                android:textAllCaps="false" />

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>