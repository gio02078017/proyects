<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>


    <style name="RaisedButtonDark" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>



    <style name="EditTextMenu">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/green_font_profile</item>
        <item name="android:textColorHint">@color/hint_color_profile</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>

    </style>

    <style name="SpinnerCard" parent="Widget.AppCompat.Spinner.Underlined">

         <item name="android:background">@drawable/spinner_suscription</item>

    </style>

    <style name="EditTextSuscription">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewSuscription">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SwitchSuscription">
        <item name="colorControlActivated">@color/switch_suscription</item>
    </style>

    <style name="switchConfigurationNotification" parent="Widget.AppCompat.CompoundButton.Switch">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/white</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/switch_color_off</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

    </style>


      <style name="textDashboardTitles">
          <item name="android:textColor">#95989A</item>
          <item name="android:textSize">@dimen/textIcons</item>
      </style>


    <style name="textSplash">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="input_edittext_update_subscription" parent="Theme.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/editText</item>
        <item name="android:textSize">@dimen/text_input</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">17sp</item>
    </style>

    <style name="input_textview_update_subscription" parent="Theme.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">13dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/editText</item>
        <item name="android:textSize">@dimen/text_input</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:layout_marginTop">9dp</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Window.NoMinWidth" parent="">
        <item name="android:windowMinWidthMinor">20dip</item>
        <item name="android:windowMinWidthMajor">20dip</item>
    </style>

</resources>
