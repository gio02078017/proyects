<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.epm.app.mvvm.turn.viewModel.DetailsOfTheTransactionViewModel" />

    </data>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/generalDrawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mvvm.turn.views.activities.DetailsOfTheTransactionActivity">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/toolbarDetails"
                layout="@layout/toolbar"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/toolbarDetails"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/buttonTransaction"
                />

            <app.epm.com.utilities.controls.CustomButtonBold
                android:id="@+id/buttonTransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_button_formalities"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@color/color_button_detail_transaction_turn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />





        </android.support.constraint.ConstraintLayout>


        <include layout="@layout/template_fragment_menu"/>


    </android.support.v4.widget.DrawerLayout>



</layout>