<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="itemViewModel"
            type="com.epm.app.mvvm.turn.viewModel.NearbyOfficesViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/layoutNearbyOfficess">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/padding_nearby_offices_item_top"
            android:paddingBottom="@dimen/padding_nearby_offices_item_bottom"
            android:paddingStart="@dimen/padding_nearby_offices_item_start"
            android:paddingEnd="@dimen/padding_nearby_offices_item_end">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imageNearbyOffices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:mutableLoadImage="@{itemViewModel.imageNearbyOffice}" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="75"
                android:orientation="vertical"
                android:paddingStart="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textDistanceNearbyOffices"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_text_detail"
                        android:textColor="@color/color_text_information_nearby_offices"
                        app:mutableTextTypeFace="@{itemViewModel.textStyleDistanceNearbyOffices}"
                        app:mutableText="@{itemViewModel.textDistanceNearbyOffices}"/>

                    <TextView
                        android:id="@+id/textInformationNearbyOffices"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:textSize="@dimen/size_text_detail"
                        android:textColor="@{itemViewModel.textColorInformationNearbyOffices}"
                        app:mutableTextTypeFace="@{itemViewModel.textStyleInformationNearbyOffices}"
                        app:mutableText="@{itemViewModel.textInformationNearbyOffices}"/>

                </LinearLayout>

                <app.epm.com.utilities.controls.CustomTextViewBold
                    android:id="@+id/textOfficeNameNearbyOffices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@{itemViewModel.textColorOfficeNameNearbyOffices}"
                    android:textSize="@dimen/size_title_2_h2_turn"
                    app:mutableText="@{itemViewModel.textOfficeNameNearbyOffices}" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:layout_marginEnd="5dp"
                android:orientation="vertical"
                android:gravity="end">

                <ImageView
                    android:id="@+id/imageArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_arrow_right_turns" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_line_nearby_offices_item"
            android:layout_marginStart="@dimen/margin_line_nearby_offices_item_start"
            android:layout_marginEnd="@dimen/margin_line_nearby_offices_item_end"
            android:background="@color/color_divide_line_turns"/>

    </LinearLayout>

</layout>