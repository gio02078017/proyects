<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/generalDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:fillViewport="true">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:visibility="visible">

                <android.support.v7.widget.CardView
                    android:id="@+id/landing_ivNoticias"
                    android:layout_width="@dimen/card_layoutWidth"
                    android:layout_height="@dimen/card_layoutHeight"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="40dp"
                    app:cardElevation="@dimen/card_elevationShadow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top|center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">


                            <ImageView
                                android:id="@+id/image_ivNoticias"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_notices"
                                />


                            <app.epm.com.utilities.controls.CustomTextViewBold
                                android:id="@+id/txtNotices"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingTop="5dp"
                                android:text="@string/icon_notices"
                                android:textAlignment="center"
                                android:textColor="@color/textIconsDashboard"
                                android:textSize="@dimen/textIcons" />
                        </LinearLayout>


                    </android.support.constraint.ConstraintLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/landing_ivLineasDeAtencion"
                    android:layout_width="@dimen/card_layoutWidth"
                    android:layout_height="@dimen/card_layoutHeight"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:cardElevation="@dimen/card_elevationShadow"
                    app:layout_constraintEnd_toStartOf="@+id/landing_ivServicioAlCliente"
                    app:layout_constraintStart_toEndOf="@+id/landing_ivNoticias"
                    app:layout_constraintTop_toTopOf="parent">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top|center"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/imagelanding_ivLineasDeAtencion"
                            android:layout_width="@dimen/ic_dashboard_width"
                            android:layout_height="@dimen/ic_dashboard_Heigth"
                            android:src="@mipmap/icon_comunication" />

                        <app.epm.com.utilities.controls.CustomTextViewBold
                            android:id="@+id/txtLineAtention"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="1dp"
                            android:text="@string/icon_telephone"
                            android:textAlignment="center"
                            android:textColor="@color/textIconsDashboard"
                            android:textSize="@dimen/textIcons"/>

                        </LinearLayout>
                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/landing_ivServicioAlCliente"
                    android:layout_width="@dimen/card_layoutWidth"
                    android:layout_height="@dimen/card_layoutHeight"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:cardElevation="@dimen/card_elevationShadow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/landing_ivLineasDeAtencion">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top|center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/ic_frame_Heigth">

                                <ImageView
                                    android:id="@+id/imagelanding_ivServicioAlCliente"
                                    android:layout_width="@dimen/ic_dashboard_width"
                                    android:layout_height="@dimen/ic_dashboard_Heigth"
                                    android:src="@mipmap/icon_customer_service"
                                    android:layout_gravity="bottom"/>

                                <TextView
                                    android:id="@+id/badgeAssignedTurn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_size_badge_assigned_turn"
                                    android:padding="1dp"
                                    android:textStyle="bold"
                                    android:visibility="gone"
                                    android:background="@drawable/badge_notification"
                                    android:layout_gravity="center|top"
                                    android:gravity="center"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginStart="@dimen/margin_badge_assigned_turn"/>

                            </FrameLayout>


                        <app.epm.com.utilities.controls.CustomTextViewBold
                            android:id="@+id/txtOffice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="5dp"
                            android:text="@string/icon_customer_service"
                            android:textAlignment="center"
                            android:textColor="@color/textIconsDashboard"
                            android:textSize="@dimen/textIcons" />

                        </LinearLayout>

                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/landing_ivReporteDeFraudes"
                    android:layout_width="@dimen/card_layoutWidth"
                    android:layout_height="@dimen/card_layoutHeight"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="@dimen/card_marginTop"
                    app:cardElevation="@dimen/card_elevationShadow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/landing_ivNoticias">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:gravity="center">

                        <ImageView
                            android:id="@+id/imagelanding_ivReporteDeFraudes"
                            android:layout_width="@dimen/ic_dashboard_width"
                            android:layout_height="@dimen/ic_dashboard_Heigth"
                            android:src="@mipmap/icon_fraud" />

                        <app.epm.com.utilities.controls.CustomTextViewBold
                            android:id="@+id/txtfraudes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="3dp"
                            android:text="Reporte de"
                            android:textAlignment="center"
                            android:textColor="@color/textIconsDashboard"
                            android:textSize="@dimen/textIcons"/>

                        <app.epm.com.utilities.controls.CustomTextViewBold
                            android:id="@+id/txtfraude2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="fraudes en "
                            android:textAlignment="center"
                            android:textColor="@color/textIconsDashboard"
                            android:textSize="@dimen/textIcons"/>

                        <app.epm.com.utilities.controls.CustomTextViewBold
                            android:id="@+id/txtfraude3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="servicios públicos"
                            android:textAlignment="center"
                            android:textColor="@color/textIconsDashboard"
                            android:textSize="@dimen/textIcons" />

                        </LinearLayout>

                    </android.support.constraint.ConstraintLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/landing_ivFacturaWeb"
                    android:layout_width="@dimen/card_layoutWidth"
                    android:layout_height="@dimen/card_layoutHeight"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="@dimen/card_marginTop"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:cardElevation="@dimen/card_elevationShadow"
                    app:layout_constraintEnd_toStartOf="@+id/landing_ivContactoTransparente"
                    app:layout_constraintStart_toEndOf="@+id/landing_ivReporteDeFraudes"
                    app:layout_constraintTop_toBottomOf="@+id/landing_ivLineasDeAtencion">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                     >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/imagelanding_ivFacturaWeb"
                            android:layout_width="@dimen/ic_dashboard_width"
                            android:layout_height="@dimen/ic_dashboard_Heigth"
                            android:src="@mipmap/icon_facture" />

                        <app.epm.com.utilities.controls.CustomTextViewBold
                            android:id="@+id/txtFactura"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="3dp"
                            android:text="@string/icon_facture"
                            android:textAlignment="center"
                            android:textColor="@color/textIconsDashboard"
                            android:textSize="@dimen/textIcons" />
                        </LinearLayout>


                    </android.support.constraint.ConstraintLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/landing_ivContactoTransparente"
                    android:layout_width="@dimen/card_layoutWidth"
                    android:layout_height="@dimen/card_layoutHeight"
                    android:layout_marginTop="@dimen/card_marginTop"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:cardElevation="@dimen/card_elevationShadow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/landing_ivServicioAlCliente">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top|center"
                       >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/imagelanding_ivContactoTransparente"
                            android:layout_width="@dimen/ic_dashboard_width"
                            android:layout_height="@dimen/ic_dashboard_Heigth"
                            android:src="@mipmap/icon_contact"/>

                        <app.epm.com.utilities.controls.CustomTextViewBold
                            android:id="@+id/txtContactTrasparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="3dp"
                            android:text="@string/icon_contactTrasparent"
                            android:textAlignment="center"
                            android:textColor="@color/textIconsDashboard"
                            android:textSize="@dimen/textIcons" />
                        </LinearLayout>



                    </android.support.constraint.ConstraintLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/landing_ivReporteDeDanios"
                    android:layout_width="@dimen/card_layoutWidth"
                    android:layout_height="@dimen/card_layoutHeight"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="@dimen/card_marginTop"
                    app:cardElevation="@dimen/card_elevationShadow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/landing_ivReporteDeFraudes">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top|center"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:gravity="center">

                        <ImageView
                            android:id="@+id/imagelanding_ivReporteDeDanios"
                            android:layout_width="@dimen/ic_dashboard_width"
                            android:layout_height="@dimen/ic_dashboard_Heigth"
                            android:src="@mipmap/icon_reports" />

                        <app.epm.com.utilities.controls.CustomTextViewBold
                            android:id="@+id/txtReports"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/icon_reports"
                            android:paddingTop="3dp"
                            android:textAlignment="center"
                            android:textColor="@color/textIconsDashboard"
                            android:textSize="@dimen/textIcons"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/imagelanding_ivReporteDeDanios" />

                        </LinearLayout>

                    </android.support.constraint.ConstraintLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/landing_ivEventosEpm"
                    android:layout_width="@dimen/card_layoutWidth"
                    android:layout_height="@dimen/card_layoutHeight"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/card_marginTop"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:cardElevation="@dimen/card_elevationShadow"
                    app:layout_constraintEnd_toStartOf="@+id/landing_ivEstacionesDeGas"
                    app:layout_constraintStart_toEndOf="@+id/landing_ivReporteDeDanios"
                    app:layout_constraintTop_toBottomOf="@+id/landing_ivFacturaWeb">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:gravity="center">


                        <ImageView
                            android:id="@+id/imagelanding_ivEventosEpm"
                            android:layout_width="@dimen/ic_dashboard_width"
                            android:layout_height="@dimen/ic_dashboard_width"
                            android:src="@mipmap/icon_events" />

                        <app.epm.com.utilities.controls.CustomTextViewBold
                            android:id="@+id/txtEvents"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="3dp"
                            android:text="@string/icon_events"
                            android:textAlignment="center"
                            android:textColor="@color/textIconsDashboard"
                            android:textSize="@dimen/textIcons"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/imagelanding_ivEventosEpm" />

                        </LinearLayout>

                    </android.support.constraint.ConstraintLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/landing_ivEstacionesDeGas"
                    android:layout_width="@dimen/card_layoutWidth"
                    android:layout_height="@dimen/card_layoutHeight"
                    android:layout_marginTop="@dimen/card_marginTop"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:cardElevation="@dimen/card_elevationShadow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/landing_ivContactoTransparente">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top|center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:gravity="center">


                        <ImageView
                            android:id="@+id/imagelanding_ivEstacionesDeGas"
                            android:layout_width="@dimen/ic_dashboard_width"
                            android:layout_height="@dimen/ic_dashboard_Heigth"
                            android:src="@mipmap/icon_gas" />

                        <app.epm.com.utilities.controls.CustomTextViewBold
                            android:id="@+id/txtStations"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="3dp"
                            android:text="@string/icon_stations"
                            android:textAlignment="center"
                            android:textColor="@color/textIconsDashboard"
                            android:textSize="@dimen/textIcons"/>

                        </LinearLayout>


                    </android.support.constraint.ConstraintLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/landing_ivalertashidroituango"
                    android:layout_width="@dimen/card_layoutWidth"
                    android:layout_height="@dimen/card_layoutHeight"
                    android:layout_marginTop="@dimen/card_marginTop"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="@dimen/card_elevationShadow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/landing_ivEstacionesDeGas">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top|center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:gravity="center">


                        <ImageView
                            android:id="@+id/imagelanding_ivalertashidroituango"
                            android:layout_width="@dimen/ic_dashboard_width"
                            android:layout_height="@dimen/ic_dashboard_Heigth"
                            android:src="@mipmap/icon_ituango" />


                        <app.epm.com.utilities.controls.CustomTextViewBold
                            android:id="@+id/txtAlert"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="3dp"
                            android:text="@string/icon_alerts"
                            android:textAlignment="center"
                            android:textColor="@color/textIconsDashboard"
                            android:textSize="@dimen/textIcons"/>

                        </LinearLayout>

                    </android.support.constraint.ConstraintLayout>


                </android.support.v7.widget.CardView>

            </android.support.constraint.ConstraintLayout>

        </ScrollView>

    </LinearLayout>

    <include layout="@layout/template_fragment_menu"
        />

</android.support.v4.widget.DrawerLayout>