<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".mvvm.comunidad.views.activities.RedAlertInformationActivity">

    <data>

        <variable
            name="redAlertViewModel"
            type="com.epm.app.mvvm.comunidad.viewModel.RedAlertViewModel" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/toolbar_red_alert"
       >

        <include
            android:id="@+id/toolbar_red_alert"
            layout="@layout/toolbar_red_alert"
            app:navigationIcon="?attr/homeAsUpIndicator" />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_red_alert">



            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <app.epm.com.utilities.controls.CustomTextViewBold
                    android:id="@+id/descriptionAlerta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_title_description_red_alert"
                    android:textColor="@color/black"
                    android:layout_marginTop="25dp"
                    android:textSize="@dimen/text_subtitle_Red_Alert"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <app.epm.com.utilities.controls.CustomTextViewBold
                    android:id="@+id/ubication"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="@dimen/text_description_Red_Alert"
                    android:textColor="@color/text_red_alert"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/descriptionAlerta"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:mutableText="@{redAlertViewModel.location}" />

            </android.support.constraint.ConstraintLayout>


        </android.support.v7.widget.CardView>


        <com.esri.arcgisruntime.mapping.view.MapView
            android:id="@+id/baseMap_frameLayoutArcgisMap"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            mapoptions.MapType="OSM"
            android:layout_marginTop="80dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_red_alert"
            />


    </android.support.constraint.ConstraintLayout>


</layout>