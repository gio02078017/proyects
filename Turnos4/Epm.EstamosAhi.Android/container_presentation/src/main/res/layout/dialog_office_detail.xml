<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:id="@+id/dato"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_general_top_dialog_office_detail"
    android:background="@color/color_white">

    <app.epm.com.utilities.controls.CustomTextViewBold
        android:id="@+id/textNameOffice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_start_text_name_dialog_office_detail"
        android:paddingEnd="@dimen/padding_end_text_name_dialog_office_detail"
        android:textColor="@color/color_text_title_turns"
        android:textSize="@dimen/size_title_2_h2_turn"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_top_card_image_dialog_office_detail"
        android:paddingBottom="@dimen/padding_bottom_card_image_dialog_office_detail">

        <ProgressBar
            android:id="@+id/progressBarOffice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/imageOffice"
            android:layout_marginStart="@dimen/margin_start_image_dialog_office_detail"
            android:layout_marginEnd="@dimen/margin_end_image_dialog_office_detail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_image_dialog_office_detail_height"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <app.epm.com.utilities.controls.CustomButtonBold
        android:id="@+id/btnAcept"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_buttom_height_turn"
        android:text="@string/accept_button_text"
        android:background="@color/pageIndicator"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/color_white"
        android:textSize="@dimen/size_text_buttom"/>
</LinearLayout>
</layout>
