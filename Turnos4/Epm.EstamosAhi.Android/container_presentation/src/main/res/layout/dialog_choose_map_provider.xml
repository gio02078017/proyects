<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="17dp"
    android:paddingStart="17dp"
    android:paddingBottom="9dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar app"
        android:textSize="@dimen/size_title_3_head_turn"
        android:textStyle="normal"
        android:textColor="@color/color_title_provider_maps"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="19dp"
        android:id="@+id/lyGoogleMaps">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/icon_google_map"
                android:layout_gravity="start"/>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="85"
            android:textColor="@color/color_black_name_provider_maps"
            android:textSize="@dimen/size_title_3_head_turn"
            android:textStyle="normal"
            android:text="@string/text_name_google_maps"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="19dp"
        android:id="@+id/lyWaze">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/icon_waze" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="85"
            android:textColor="@color/color_black_name_provider_maps"
            android:textSize="@dimen/size_title_3_head_turn"
            android:textStyle="normal"
            android:text="@string/text_name_waze" />

    </LinearLayout>
</LinearLayout>
