<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/generalDrawerLayout"
    android:layout_width="match_parent"
    tools:context=".view.activities.VerResumenDanioActivity"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <app.epm.com.utilities.controls.CustomTextViewBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_ver_resumen_danio"
            android:background="@color/titleBarGray"
            android:elevation="4dp"
            android:padding="13dp"
            android:textSize="20sp"
            android:gravity="center"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="16dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <app.epm.com.utilities.controls.CustomTextViewNormal
                    android:id="@+id/customTextViewNormal4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icono_tipo_dano"
                    android:drawableStart="@mipmap/icono_tipo_dano"
                    android:gravity="center_vertical"
                    android:text="@string/text_describe_type"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/text_green_ingresar_datos" />

                <app.epm.com.utilities.controls.CustomEditTextNormal
                    android:id="@+id/see_resume_etTipoDanio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_see_resume_danio_top"
                    android:background="@null"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"
                    android:enabled="false" />

                <View
                    android:layout_width="wrap_content"
                    android:background="@color/ver_resumen_danio_backbround"
                    android:layout_marginBottom="@dimen/margin_see_resume_danio_bottom"
                    android:layout_marginTop="@dimen/margin_see_resume_danio_top"
                    android:layout_height="0.5dp"/>

                <app.epm.com.utilities.controls.CustomTextViewNormal
                    android:id="@+id/see_resume_tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:drawableLeft="@mipmap/icon_describe"
                    android:drawableStart="@mipmap/icon_describe"
                    android:gravity="center_vertical"
                    android:text="@string/text_describe"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/text_green_ingresar_datos" />

                <app.epm.com.utilities.controls.CustomEditTextNormal
                    android:id="@+id/see_resume_etDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_see_resume_danio_top"
                    android:background="@null"
                    android:maxLength="100"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"
                    android:enabled="false" />

                <View
                    android:layout_width="wrap_content"
                    android:background="@color/ver_resumen_danio_backbround"
                    android:layout_marginBottom="@dimen/margin_see_resume_danio_bottom"
                    android:layout_marginTop="@dimen/margin_see_resume_danio_top"
                    android:layout_height="0.5dp"/>

                <app.epm.com.utilities.controls.CustomTextViewNormal
                    android:id="@+id/see_resume_tvPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:drawableLeft="@mipmap/icon_location"
                    android:drawableStart="@mipmap/icon_location"
                    android:gravity="center_vertical"
                    android:text="@string/text_describe_place"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/text_green_ingresar_datos" />

                <app.epm.com.utilities.controls.CustomEditTextNormal
                    android:id="@+id/see_resume_etLugar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_see_resume_danio_top"
                    android:background="@null"
                    android:maxLength="100"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"
                    android:enabled="false" />

                <View
                    android:layout_width="wrap_content"
                    android:background="@color/ver_resumen_danio_backbround"
                    android:layout_marginBottom="@dimen/margin_see_resume_danio_bottom"
                    android:layout_marginTop="@dimen/margin_see_resume_danio_top"
                    android:layout_height="0.5dp"/>

                <app.epm.com.utilities.controls.CustomTextViewNormal
                    android:id="@+id/see_resume_tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:drawableLeft="@mipmap/icon_phone"
                    android:drawableStart="@mipmap/icon_phone"
                    android:gravity="center_vertical"
                    android:text="@string/text_describe_phone"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/text_green_ingresar_datos" />

                <app.epm.com.utilities.controls.CustomEditTextNormal
                    android:id="@+id/see_resume_etTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_see_resume_danio_top"
                    android:inputType="phone"
                    android:background="@null"
                    android:maxLength="10"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"
                    android:enabled="false" />

                <View
                    android:layout_width="wrap_content"
                    android:background="@color/ver_resumen_danio_backbround"
                    android:layout_marginBottom="@dimen/margin_see_resume_danio_bottom"
                    android:layout_marginTop="@dimen/margin_see_resume_danio_top"
                    android:layout_height="0.5dp"/>

                <app.epm.com.utilities.controls.CustomTextViewNormal
                    android:id="@+id/see_resume_tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:drawableLeft="@mipmap/icon_name"
                    android:drawableStart="@mipmap/icon_name"
                    android:gravity="center_vertical"
                    android:text="@string/text_describe_name"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/text_green_ingresar_datos" />

                <app.epm.com.utilities.controls.CustomEditTextNormal
                    android:id="@+id/see_resume_etNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_see_resume_danio_top"
                    android:layout_marginBottom="10dp"
                    android:inputType="textPersonName"
                    android:maxLength="50"
                    android:background="@null"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"
                    android:enabled="false" />

                <View
                    android:layout_width="wrap_content"
                    android:background="@color/ver_resumen_danio_backbround"
                    android:layout_marginBottom="@dimen/margin_see_resume_danio_bottom"
                    android:layout_marginTop="@dimen/margin_see_resume_danio_top"
                    android:layout_height="0.5dp"/>

                <LinearLayout
                    android:id="@+id/see_resume_danio_llPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <app.epm.com.utilities.controls.CustomTextViewNormal
                        android:id="@+id/see_resume_tvPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/icono_galeria"
                        android:drawableStart="@mipmap/icono_galeria"
                        android:gravity="center_vertical"
                        android:text="@string/text_describe_photo"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/text_green_ingresar_datos" />

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/see_resume_ivPhoto"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/margin_see_resume_danio_top"
                            android:orientation="horizontal">

                        </LinearLayout>

                    </HorizontalScrollView>

                    <View
                        android:layout_width="wrap_content"
                        android:background="@color/ver_resumen_danio_backbround"
                        android:layout_marginBottom="@dimen/margin_see_resume_danio_bottom"
                        android:layout_marginTop="@dimen/margin_see_resume_danio_top"
                        android:layout_height="0.5dp"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/see_resume_llPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <app.epm.com.utilities.controls.CustomButtonBold
                android:id="@+id/see_resume_btnSendMyReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/button_green_factura"
                android:text="@string/text_enviar_mi_reporte"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="@dimen/size_text_button" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/template_fragment_menu"          />

</android.support.v4.widget.DrawerLayout>