<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/generalDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.RegisterReporteDeFraudesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:focusable="true"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/registerReporteDeFraude_relativeLayout_anonymous"
                android:layout_width="match_parent"
                android:layout_height="@dimen/length_bar_anonymous"
                android:background="@drawable/line_backgroud_gray">


                <app.epm.com.utilities.controls.CustomTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"
                    android:gravity="center"
                    android:text="@string/report_anonymous"
                    android:textAppearance="?android:attr/textAppearanceSmall" />


                <CheckBox
                    android:id="@+id/registerReporteDeFraude_checkBox_anonymous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:button="@mipmap/checkbox_off"
                    android:gravity="center" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/registerReporteDeFraude_relativeLayout_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/registerReporteDeFraude_relativeLayout_anonymous">

                <ImageView
                    android:id="@+id/registerReporteDeFraude_imageView_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/image_type_service_size"
                    android:layout_marginStart="@dimen/image_type_service_size"
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/icon_service_energy_green"
                    android:gravity="center" />

                <app.epm.com.utilities.controls.CustomTextViewBold
                    android:id="@+id/registerReporteDeFraude_textView_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/registerReporteDeFraude_imageView_service"
                    android:layout_marginLeft="@dimen/margin_title_describe"
                    android:layout_marginStart="@dimen/margin_title_describe"
                    android:text="@string/text_describe_fraude"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_fraude" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/registerReporteDeFraude_textView_title"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/registerReporteDeFraude_imageView_service"
                    android:layout_toRightOf="@+id/registerReporteDeFraude_imageView_service"
                    android:src="@mipmap/step_three" />

            </RelativeLayout>


            <View
                android:id="@+id/registerReporteDeFraude_view_lineSeparator"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_below="@+id/registerReporteDeFraude_relativeLayout_service"
                android:layout_marginTop="5dp"
                android:background="@drawable/line_backgroud_gray" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/length_bar_anonymous"
                        android:layout_below="@+id/registerReporteDeFraude_view_lineSeparator"
                        android:background="@drawable/line_backgroud_gray"
                        android:gravity="center">

                        <app.epm.com.utilities.controls.CustomTextViewNormal
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_campos_obligatorios_fraude"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <app.epm.com.utilities.controls.CustomTextViewNormal
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/icon_attach"
                            android:drawableStart="@mipmap/icon_attach"
                            android:gravity="center_vertical"
                            android:text="@string/text_evidencia_fraude"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/text_fraude" />

                        <app.epm.com.utilities.controls.CustomTextViewNormal
                            android:id="@+id/registerReporteDeFraude_textView_evidence"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@android:color/transparent"
                            android:focusable="false"
                            android:focusableInTouchMode="true"
                            android:hint="@string/text_hint_evidencia_fraude"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@android:color/black"
                            android:textColorHint="@color/gray_button_continue" />

                        <HorizontalScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/registerReporteDeFraude_linearLayout_evidenceImages"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal" />
                        </HorizontalScrollView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/gray_button_continue" />

                        <app.epm.com.utilities.controls.CustomTextViewNormal
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/icono_tipo_dano"
                            android:drawableStart="@mipmap/icono_tipo_dano"
                            android:gravity="center_vertical"
                            android:text="@string/text_tipo_fraude"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/text_fraude" />

                        <app.epm.com.utilities.controls.CustomTextViewNormal
                            android:id="@+id/registerReporteDeFraude_textView_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@android:color/transparent"
                            android:focusable="false"
                            android:focusableInTouchMode="true"
                            android:hint="@string/text_hint_tipo_fraude"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@android:color/black"
                            android:textColorHint="@color/gray_button_continue" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/gray_button_continue" />

                        <app.epm.com.utilities.controls.CustomTextViewNormal
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/icon_sector"
                            android:drawableStart="@mipmap/icon_sector"
                            android:gravity="center_vertical"
                            android:text="@string/text_municipio_fraude"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/text_fraude" />

                        <app.epm.com.utilities.controls.CustomTextViewNormal
                            android:id="@+id/registerReporteDeFraude_textView_municipality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@android:color/transparent"
                            android:focusable="false"
                            android:focusableInTouchMode="true"
                            android:hint="@string/text_hint_municipio_fraude"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@android:color/black"
                            android:textColorHint="@color/gray_button_continue" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/gray_button_continue" />

                        <app.epm.com.utilities.controls.CustomTextViewNormal
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/icon_location"
                            android:drawableStart="@mipmap/icon_location"
                            android:gravity="center_vertical"
                            android:text="@string/text_sector_fraude"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/text_fraude" />

                        <app.epm.com.utilities.controls.CustomEditTextNormal
                            android:id="@+id/registerReporteDeFraude_editText_sector"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@android:color/transparent"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:hint="@string/text_hint_sector_fraude"
                            android:inputType="textPersonName"
                            android:maxLength="100"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@android:color/black"
                            android:textColorHint="@color/gray_button_continue" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/gray_button_continue" />

                        <app.epm.com.utilities.controls.CustomTextViewNormal
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/icon_place_near"
                            android:drawableStart="@mipmap/icon_place_near"
                            android:gravity="center_vertical"
                            android:text="@string/text_direccion_fraude"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/text_fraude" />

                        <app.epm.com.utilities.controls.CustomEditTextNormal
                            android:id="@+id/registerReporteDeFraude_editText_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@android:color/transparent"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:hint="@string/text_hint_direccion_fraude"
                            android:inputType="textPersonName"
                            android:maxLength="100"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@android:color/black"
                            android:textColorHint="@color/gray_button_continue" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/gray_button_continue" />

                        <app.epm.com.utilities.controls.CustomTextViewNormal
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/icon_describe"
                            android:drawableStart="@mipmap/icon_describe"
                            android:gravity="center_vertical"
                            android:text="@string/text_describe_fraude"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/text_fraude" />

                        <app.epm.com.utilities.controls.CustomEditTextNormal
                            android:id="@+id/registerReporteDeFraude_editText_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@android:color/transparent"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:hint="@string/text_hint_describe_fraude"
                            android:inputType="textPersonName"
                            android:maxLength="100"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@android:color/black"
                            android:textColorHint="@color/gray_button_continue" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/gray_button_continue" />

                        <app.epm.com.utilities.controls.CustomTextViewNormal
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/icon_hora"
                            android:drawableStart="@mipmap/icon_hora"
                            android:gravity="center_vertical"
                            android:text="@string/text_horario_fraude"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/text_fraude" />

                        <app.epm.com.utilities.controls.CustomEditTextNormal
                            android:id="@+id/registerReporteDeFraude_editText_horary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@android:color/transparent"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:hint="@string/text_hint_horario_fraude"
                            android:inputType="textPersonName"
                            android:maxLength="50"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@android:color/black"
                            android:textColorHint="@color/gray_button_continue" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/gray_button_continue" />

                        <LinearLayout
                            android:id="@+id/registerReporteDeFraude_linearLayout_fieldsAnonymous"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <app.epm.com.utilities.controls.CustomTextViewNormal
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@mipmap/icon_phone"
                                android:drawableStart="@mipmap/icon_phone"
                                android:gravity="center_vertical"
                                android:inputType="number"
                                android:text="@string/text_numero_fraude"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/text_fraude" />

                            <app.epm.com.utilities.controls.CustomEditTextNormal
                                android:id="@+id/registerReporteDeFraude_editText_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:background="@android:color/transparent"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:hint="@string/text_hint_numero_fraude"
                                android:inputType="phone"
                                android:maxLength="10"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@android:color/black"
                                android:textColorHint="@color/gray_button_continue" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/gray_button_continue" />

                            <app.epm.com.utilities.controls.CustomTextViewNormal
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@mipmap/icon_email"
                                android:drawableStart="@mipmap/icon_email"
                                android:gravity="center_vertical"
                                android:text="@string/text_correo_fraude"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/text_fraude" />

                            <app.epm.com.utilities.controls.CustomEditTextNormal
                                android:id="@+id/registerReporteDeFraude_editText_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:background="@android:color/transparent"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:hint="@string/text_hint_correo_fraude"
                                android:inputType="textEmailAddress"
                                android:maxLength="100"
                                android:textColor="@android:color/black"
                                android:textColorHint="@color/gray_button_continue"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/gray_button_continue" />

                            <app.epm.com.utilities.controls.CustomTextViewNormal
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@mipmap/icon_name"
                                android:drawableStart="@mipmap/icon_name"
                                android:gravity="center_vertical"
                                android:text="@string/text_nombre_fraude"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/text_fraude" />

                            <app.epm.com.utilities.controls.CustomEditTextNormal
                                android:id="@+id/registerReporteDeFraude_editText_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:background="@android:color/transparent"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:hint="@string/text_hint_nombre_fraude"
                                android:inputType="textPersonName"
                                android:maxLength="100"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@android:color/black"
                                android:textColorHint="@color/gray_button_continue" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/gray_button_continue" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginTop="15dp"
                            android:gravity="center">

                            <app.epm.com.utilities.controls.CustomButtonBold
                                android:id="@+id/registerReporteDeFraude_button_sendRegister"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:background="@color/gray_button_continue"
                                android:enabled="false"
                                android:gravity="center"
                                android:text="@string/text_enviar_fraude"
                                android:textAlignment="center"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@android:color/white"
                                android:textSize="20dp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/template_fragment_menu"               />

</android.support.v4.widget.DrawerLayout>
