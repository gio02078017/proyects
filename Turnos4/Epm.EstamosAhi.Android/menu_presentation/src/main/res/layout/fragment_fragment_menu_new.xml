<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_menu_new"
    >

   <android.support.constraint.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@mipmap/background_menu">


       <ImageView
           android:id="@+id/logo_menu"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="25dp"
           android:padding="50dp"
           android:src="@mipmap/logo_menu"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />


       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="8dp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/logo_menu">


               <app.epm.com.utilities.controls.CustomTextViewNormal
                   android:id="@+id/derechos"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignBottom="@+id/menu_tvVersion"
                   android:layout_centerHorizontal="true"
                   android:layout_marginBottom="0dp"
                   android:gravity="center"
                   android:text="@string/subtitle_splash"
                   android:textAppearance="?android:attr/textAppearanceSmall"
                   android:textColor="@color/text_green_splash"
                   android:textSize="11sp" />

               <app.epm.com.utilities.controls.CustomTextViewNormal
                   android:id="@+id/menu_tvVersion"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentBottom="true"
                   android:layout_centerHorizontal="true"
                   android:layout_marginBottom="17dp"
                   android:text="v 2.0"
                   android:textAppearance="?android:attr/textAppearanceSmall"
                   android:textColor="@color/text_green_splash"
                   android:textSize="12sp"
                   android:textStyle="bold" />

           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingTop="50dp"
               android:layout_weight="2">

           </RelativeLayout>

       </LinearLayout>



   </android.support.constraint.ConstraintLayout>


</FrameLayout>