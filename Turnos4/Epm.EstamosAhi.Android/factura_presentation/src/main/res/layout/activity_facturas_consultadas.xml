<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/generalDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.activities.FacturasConsultadasActivity">

    <LinearLayout
        android:id="@+id/facturasConsultadas_llFacturasConsultadas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <LinearLayout
            android:id="@+id/facturasConsultads_llListaFacturas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight=".72"
            android:visibility="gone">

            <ListView
                android:id="@+id/facturasConsultadas_lvFacturas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/lista_mis_facturas_gris"
                android:dividerHeight="10sp"
                android:scrollbars="none" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/facturasConsultadas_llSinContratos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".72"
            android:background="@color/gray_sin_contratos"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:visibility="gone">


            <app.epm.com.utilities.controls.CustomTextViewBold
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_weight=".05"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/text_sin_facturas_inscritas"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/green_factura" />

            <app.epm.com.utilities.controls.CustomTextViewNormal
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".001"
                android:background="@drawable/border_layout_barra_inferior_historico" />

            <app.epm.com.utilities.controls.CustomTextViewNormal
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".25"
                android:gravity="center"
                android:text="@string/text_informacion_facturas_sin_inscribir"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/customTextViewNormal3" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/facturasConsultadas_llTextViewsTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_factura"
                android:orientation="horizontal"
                android:visibility="gone">

                <app.epm.com.utilities.controls.CustomTextViewNormal
                    android:id="@+id/facturasConsultadas_tvTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingLeft="10dp"
                    android:text="@string/text_total"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_text_button_pagar" />

                <app.epm.com.utilities.controls.CustomTextViewNormal
                    android:id="@+id/facturasConsultadas_tvTotalPagar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:gravity="center_vertical"
                    android:text="@string/text_totalAPagar"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_text_button_pagar" />

                <TextView
                    android:id="@+id/facturasConsultad_tvLine"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight=".004"
                    android:background="@color/white"
                    android:gravity="center" />

                <app.epm.com.utilities.controls.CustomButtonBold
                    android:id="@+id/facturasConsultadas_btnPagar"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:background="@android:color/transparent"
                    android:paddingLeft="4dp"
                    android:text="@string/btn_pagar"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_text_button_pagar" />

                <ImageView
                    android:id="@+id/facturasConsultadas_ivPagar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:gravity="center"
                    android:paddingRight="18dp"
                    android:src="@mipmap/ir_a_pagar" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_barra_historico"
                android:orientation="vertical">

                <app.epm.com.utilities.controls.CustomButtonBold
                    android:id="@+id/facturasConsultadas_btnConsultar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/button_green_factura"
                    android:text="@string/btn_adicionar_factura"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_text_button_mis_facturas"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/template_fragment_menu"   />

</android.support.v4.widget.DrawerLayout>
