<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/generalDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.HistoricoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <app.epm.com.utilities.controls.CustomTextViewNormal
                    android:id="@+id/historico_tvLabelNroContrato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <app.epm.com.utilities.controls.CustomTextViewBold
                    android:id="@+id/historico_tvNroContrato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/historico_rlBase"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_centerInParent="true">

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/historico_rlCirculo4"
                    android:layout_width="@dimen/size_circulo4"
                    android:layout_height="@dimen/size_circulo4"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="13dp"
                    android:layout_toRightOf="@+id/historico_rlBase"
                    android:background="@drawable/factura_circulo_historico_4"
                    android:visibility="gone">

                    <app.epm.com.utilities.controls.CustomTextViewNormal
                        android:id="@+id/historico_tvCirculo4"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/text_month_day_y_valor_factura"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/historico_rlCirculo2"
                    android:layout_width="@dimen/size_circulo2"
                    android:layout_height="@dimen/size_circulo2"
                    android:layout_above="@+id/historico_rlBase"
                    android:layout_centerInParent="true"
                    android:background="@drawable/factura_circulo_historico_2"
                    android:visibility="gone">

                    <app.epm.com.utilities.controls.CustomTextViewNormal
                        android:id="@+id/historico_tvCirculo2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/text_month_day_y_valor_factura"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/historico_rlCirculo3"
                    android:layout_width="@dimen/size_circulo3"
                    android:layout_height="@dimen/size_circulo3"
                    android:layout_below="@+id/historico_rlBase"
                    android:layout_centerInParent="true"
                    android:background="@drawable/factura_circulo_historico_3"
                    android:visibility="gone">

                    <app.epm.com.utilities.controls.CustomTextViewNormal
                        android:id="@+id/historico_tvCirculo3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/text_month_day_y_valor_factura"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/historico_rlCirculo1"
                    android:layout_width="@dimen/size_circulo1"
                    android:layout_height="@dimen/size_circulo1"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/historico_rlBase"
                    android:background="@drawable/factura_circulo_historico_1"
                    android:visibility="gone">

                    <app.epm.com.utilities.controls.CustomTextViewNormal
                        android:id="@+id/historico_tvCirculo1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/text_month_day_y_valor_factura"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/historico_rlCirculo6"
                    android:layout_width="@dimen/size_circulo6"
                    android:layout_height="@dimen/size_circulo6"
                    android:layout_alignBottom="@+id/historico_rlCirculo4"
                    android:layout_toRightOf="@+id/historico_rlCirculo4"
                    android:background="@drawable/factura_circulo_historico_5"
                    android:visibility="gone">

                    <app.epm.com.utilities.controls.CustomTextViewNormal
                        android:id="@+id/historico_tvCirculo6"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/text_month_day_y_valor_factura"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/historico_rlBasePequenio"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/historico_rlCirculo4">

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/historico_rlCirculo5"
                    android:layout_width="@dimen/size_circulo5"
                    android:layout_height="@dimen/size_circulo5"
                    android:layout_below="@+id/historico_rlBasePequenio"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="24dp"
                    android:layout_toRightOf="@+id/historico_rlCirculo3"
                    android:background="@drawable/factura_circulo_historico_6"
                    android:visibility="gone">

                    <app.epm.com.utilities.controls.CustomTextViewNormal
                        android:id="@+id/historico_tvCirculo5"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/text_month_day_y_valor_factura"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                </RelativeLayout>

            </RelativeLayout>

            <app.epm.com.utilities.controls.CustomTextViewNormal
                android:id="@+id/historico_tvLabelValoresFacturas"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/historico_LayoutFechas"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:background="@drawable/borde_barra_historico"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="1dp"
            android:visibility="invisible">

            <app.epm.com.utilities.controls.CustomTextViewNormal
                android:id="@+id/historico_tvFecha1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/border_textview_fecha_historico"
                android:gravity="center"
                android:text="@string/text_month_historico"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
                android:visibility="gone" />

            <app.epm.com.utilities.controls.CustomTextViewNormal
                android:id="@+id/historico_tvFecha2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/text_month_historico"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text_gray_barra_historico"
                android:visibility="gone" />

            <app.epm.com.utilities.controls.CustomTextViewNormal
                android:id="@+id/historico_tvFecha3"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/text_month_historico"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text_gray_barra_historico"
                android:visibility="gone" />

            <app.epm.com.utilities.controls.CustomTextViewNormal
                android:id="@+id/historico_tvFecha4"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/text_month_historico"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text_gray_barra_historico"
                android:visibility="gone" />

            <app.epm.com.utilities.controls.CustomTextViewNormal
                android:id="@+id/historico_tvFecha5"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/text_month_historico"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text_gray_barra_historico"
                android:visibility="gone" />

            <app.epm.com.utilities.controls.CustomTextViewNormal
                android:id="@+id/historico_tvFecha6"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/text_month_historico"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text_gray_barra_historico"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Historico_LayoutBordeHistorico"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.03"
            android:background="@drawable/border_layout_barra_inferior_historico"
            android:visibility="invisible"></LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/historico_vpMes"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1" />

    </LinearLayout>

    <include layout="@layout/template_fragment_menu"   />

</android.support.v4.widget.DrawerLayout>