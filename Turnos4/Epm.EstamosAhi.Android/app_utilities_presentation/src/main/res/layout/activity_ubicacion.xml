<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/generalDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <RelativeLayout
            android:id="@+id/ubicacion_rlAnonymous"
            android:layout_width="match_parent"
            android:layout_height="@dimen/length_bar_anonymous"
            android:background="@drawable/line_backgroud_gray"
            android:visibility="gone">

            <app.epm.com.utilities.controls.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:gravity="center"
                android:text="@string/report_anonymous"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <CheckBox
                android:id="@+id/ubicacion_cbAnonymous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:button="@mipmap/checkbox_off" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/describe_RlProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/ubicacion_ivServicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:src="@mipmap/icon_service_energy_green" />

            <app.epm.com.utilities.controls.CustomTextViewBold
                android:id="@+id/ubicacion_tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/ubicacion_ivServicio"
                android:gravity="center_vertical"
                android:text="@string/text_ubicacion"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text_green_ingresar_datos" />

            <ImageView
                android:id="@+id/ubicacion_ivProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ubicacion_tvTitle"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@id/ubicacion_ivServicio"
                android:foregroundGravity="center_vertical"
                android:src="@mipmap/step_one" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ubicacion_rlMapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp">

            <com.esri.arcgisruntime.mapping.view.MapView
                android:id="@+id/ubicacion_mapView"
                mapoptions.MapType="OSM"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="0dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:id="@+id/ubicacionDanio_titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:orientation="vertical">

                    <app.epm.com.utilities.controls.CustomTextViewNormal
                        android:id="@+id/ubicacion_tvAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/title_direccion"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/green_lineas_de_atencion" />


                    <app.epm.com.utilities.controls.CustomEditTextNormal
                        android:id="@+id/ubicacion_etAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:background="@null"
                        android:backgroundTint="@android:color/darker_gray"
                        android:hint="@string/text_direccion"
                        android:lines="2"
                        android:maxLength="100"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColorHint="@color/gray_button_continue"
                        android:textColor="@android:color/black" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <ImageView
                android:id="@+id/ubicacion_ivLocation"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/card_view"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:scaleType="fitXY"
                android:src="@mipmap/icono_ubicacion" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:orientation="vertical">

                <app.epm.com.utilities.controls.CustomButtonBold
                    android:id="@+id/ubicacion_btnContinuar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/status_bar"
                    android:onClick="onClickBtnContinuar"
                    android:text="@string/text_continue"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_text_button" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
    <include layout="@layout/template_fragment_menu"   />

</android.support.v4.widget.DrawerLayout>
